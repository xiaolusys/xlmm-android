<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/udesk_loginDialog_background"
    >
    <LinearLayout
        android:id="@+id/udesk_confirm_pop_panel"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:minHeight="180dp"
        android:layout_gravity="center"
        android:background="@drawable/puw_bg_corners"
        android:orientation="vertical" >

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="120dp"
            android:layout_gravity="center_horizontal" >

            <TextView
                android:id="@+id/udesk_confirm_pop_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="30dp"
                android:textSize="@dimen/udesk_sp18"
                android:textColor="@color/udesk_custom_dialog_cancle_btn_color"/>
        </FrameLayout>

        <include layout="@layout/udesk_line_horizontal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:minHeight="60dp"
            android:layout_height="60dp"
            android:orientation="horizontal"
             >

            <TextView
                android:id="@+id/udesk_confirm_pop_negative"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_gravity="center"
                android:textColor="@color/udesk_custom_dialog_cancle_btn_color"
                android:textSize="@dimen/udesk_sp15"
                android:background="@drawable/puw_bt_selecter_left"
                />

            <include layout="@layout/udesk_line_vertical" />

            <TextView
                android:id="@+id/udesk_confirm_pop_positive"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="@dimen/udesk_sp15"
                android:background="@drawable/puw_bt_selecter_right"
                android:textColor="@color/udesk_custom_dialog_sure_btn_color" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>