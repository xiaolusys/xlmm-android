<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jimei.xiaolumeimei">

  <uses-permission android:name="android.permission.INTERNET"/>
  <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

  <application
      android:name=".XlmmApp"
      android:allowBackup="true"
      android:icon="@mipmap/ic_launcher"
      android:label="@string/app_name"
      android:supportsRtl="true"
      android:theme="@style/AppTheme">

    <meta-data android:name="design_width" android:value="720">
    </meta-data>
    <meta-data android:name="design_height" android:value="1280">
    </meta-data>

    <meta-data android:name="com.jimei.xiaolumeimei.glidemoudle.GlideConfig"
        android:value="GlideModule"
        />

    <activity
        android:name=".ui.activity.SplashActivity">
      <intent-filter>
        <action android:name="android.intent.action.MAIN"/>

        <category android:name="android.intent.category.LAUNCHER"/>
      </intent-filter>
    </activity>
    <activity android:name=".ui.activity.MainActivity"/>
    <activity android:name=".ui.activity.LoginActivity"
        android:theme="@style/AppTheme.TransparentActivity"
        />
    <activity android:name=".ui.activity.SettingAccountActivity"
        android:theme="@style/AppTheme.TransparentActivity"/>
    <activity android:name=".ui.activity.SettingMyInfoActivity"
        android:theme="@style/AppTheme.TransparentActivity"/>
    <activity android:name=".ui.activity.SettingRegisterActivity"
        android:theme="@style/AppTheme.TransparentActivity"/>
    <activity android:name=".ui.activity.SettingBillActivity"
        android:theme="@style/AppTheme.TransparentActivity"/>
    <activity android:name=".ui.activity.SettingContactActivity"
        android:theme="@style/AppTheme.TransparentActivity"/>
    <activity android:name=".ui.activity.TongkuanActicity"
        android:theme="@style/AppTheme.TransparentActivity"
        />
    <activity
        android:theme="@style/AppTheme.TransparentActivity"
        android:name=".ui.activity.ProductDetailMutilActvity"/>
    <activity android:name=".ui.activity.ProductDetailSingleActvity"
        android:theme="@style/AppTheme.TransparentActivity"
        />
  </application>

</manifest>
