<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jimei.xiaolumeimei">

  <uses-permission android:name="android.permission.INTERNET"/>
  <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

  <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
  <uses-permission android:name="android.permission.READ_PHONE_STATE"/>
  <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
  <uses-permission android:name="android.permission.CAMERA"/>

  <application
      android:name=".XlmmApp"
      android:allowBackup="true"
      android:icon="@mipmap/ic_launcher"
      android:label="@string/app_name"
      android:supportsRtl="true"
      android:theme="@style/AppTheme">

    <meta-data android:name="design_width" android:value="720">
    </meta-data>
    <meta-data android:name="design_height" android:value="1230">
    </meta-data>

    //友盟统计相关
    <meta-data
    android:name="UMENG_APPKEY"
    android:value="${UMENG_APPKEY}" />

    <meta-data
    android:name="UMENG_CHANNEL"
    android:value="${CHANNEL_NAME}" />


    <meta-data android:name="com.jimei.xiaolumeimei.glidemoudle.GlideConfig"
        android:value="GlideModule"
        />
    <meta-data
        android:name="com.bumptech.glide.integration.okhttp.OkHttpGlideModule"
        android:value="GlideModule"/>
    <activity
        android:theme="@style/AppTheme.TransparentActivity"
        android:name=".ui.activity.main.SplashActivity">
      <intent-filter>
        <action android:name="android.intent.action.MAIN"/>

        <category android:name="android.intent.category.LAUNCHER"/>
      </intent-filter>
    </activity>
    <activity android:name=".ui.activity.main.MainActivity"/>
    <activity android:name=".ui.activity.user.LoginActivity"
        android:theme="@style/AppTheme.TransparentActivity"
        />
    <activity android:name=".ui.activity.user.RegisterActivity"
        android:theme="@style/AppTheme.TransparentActivity"/>

    <activity android:name=".ui.activity.product.TongkuanActivity"
        android:theme="@style/AppTheme.TransparentActivity"
        />
    <activity
        android:theme="@style/AppTheme.TransparentActivity"
        android:name=".ui.activity.product.ProductDetailActvity"/>

    <activity android:name=".ui.activity.trade.CartActivity"
        android:theme="@style/AppTheme.TransparentActivity"
        />
    <activity android:name=".ui.activity.trade.CartsPayInfoActivity"
        android:theme="@style/AppTheme.TransparentActivity"
        />
    <activity android:name=".ui.activity.user.ChanggeAddressActivity"
        android:theme="@style/AppTheme.TransparentActivity"
        />

    <!-- Ping++ sdk -->
    <activity
        android:name="com.pingplusplus.android.PaymentActivity"
        android:configChanges="orientation|screenSize"
        android:launchMode="singleTop"
        android:theme="@android:style/Theme.Translucent.NoTitleBar"/>
    <!-- 微信支付 sdk ，也是 Ping++ sdk 调用入口 -->
    <activity-alias
        android:name=".wxapi.WXPayEntryActivity"
        android:exported="true"
        android:targetActivity="com.pingplusplus.android.PaymentActivity"/>
    <!-- 支付宝 sdk -->
    <activity
        android:name="com.alipay.sdk.app.H5PayActivity"
        android:configChanges="orientation|keyboardHidden|navigation"
        android:exported="false"
        android:screenOrientation="behind">
    </activity>
    <activity
        android:name="com.alipay.sdk.auth.AuthActivity"
        android:configChanges="orientation|keyboardHidden|navigation"
        android:exported="false"
        android:screenOrientation="behind">
    </activity>
    <activity
        android:name=".ui.activity.trade.AllOrdersActivity"
        android:label="@string/title_activity_allorders"
        android:theme="@style/AppTheme.TransparentActivity"
        >
    </activity>

    <activity
        android:name=".ui.activity.trade.OrderDetailActivity"
        android:label="@string/title_activity_orderdetail"
        android:theme="@style/AppTheme.TransparentActivity"
        >
    </activity>

    <activity
        android:name=".ui.activity.trade.AllRefundsActivity"
        android:label="@string/title_activity_refunds"
        android:theme="@style/AppTheme.TransparentActivity"
        >
    </activity>

    <activity
        android:name=".ui.activity.trade.RefundDetailActivity"
        android:label="@string/title_activity_refunddetail"
        android:theme="@style/AppTheme.TransparentActivity"
        >
    </activity>
    <activity
        android:name=".ui.activity.trade.WaitPayOrdersActivity"
        android:label="@string/title_activity_waitsend"
        android:theme="@style/AppTheme.TransparentActivity"
        >
    </activity>

    <activity
        android:name=".ui.activity.trade.WaitSendOrdersActivity"
        android:label="@string/title_activity_waitsend"
        android:theme="@style/AppTheme.TransparentActivity"
        >
    </activity>

    <activity android:name=".ui.activity.user.SettingActivity"
        android:theme="@style/AppTheme.TransparentActivity"
        />

    <activity android:name=".ui.activity.user.AddressActivity"
        android:theme="@style/AppTheme.TransparentActivity"
        />
    <activity android:name=".ui.activity.user.AddAddressActivity"
        android:theme="@style/AppTheme.TransparentActivity"
        />

    <activity android:name=".ui.activity.user.SettingNicknameActivity"
        android:theme="@style/AppTheme.TransparentActivity"
        />
    <activity android:name=".ui.activity.user.SettingPasswordActivity"
        android:theme="@style/AppTheme.TransparentActivity"
        />

    <activity android:name=".ui.activity.main.ComplainActvity"
        android:theme="@style/AppTheme.TransparentActivity"
        />

    <activity android:name=".ui.activity.user.VerifyPhoneActivity"
        android:theme="@style/AppTheme.TransparentActivity"
        />
    <activity android:name=".ui.activity.user.EditPasswordActivity"
        android:theme="@style/AppTheme.TransparentActivity"
        />

    <activity android:name=".ui.activity.user.CouponActivity"
        android:theme="@style/AppTheme.TransparentActivity"
        />
    <activity android:name=".ui.activity.user.VerifyPhoneForgetActivity"
        android:theme="@style/AppTheme.TransparentActivity"
        />
    <activity android:name=".ui.activity.user.EditPasswordForgetActivity"
        android:theme="@style/AppTheme.TransparentActivity"
        />

    <activity android:name=".ui.activity.user.MembershipPointActivity"
        android:theme="@style/AppTheme.TransparentActivity"
        />

    <activity android:name=".ui.activity.main.CompanyInfoActivity"
        android:theme="@style/AppTheme.TransparentActivity"
        />
    <activity android:name=".ui.activity.user.SmsLoginActivity"
        android:theme="@style/AppTheme.TransparentActivity"
        />
    <activity android:name=".ui.activity.trade.ApplyRefundActivity"
        android:theme="@style/AppTheme.TransparentActivity"
        android:windowSoftInputMode="adjustResize|stateHidden"
        />
    <activity android:name=".ui.activity.trade.ApplyReturnGoodsActivity"
        android:theme="@style/AppTheme.TransparentActivity"
        android:windowSoftInputMode="adjustResize|stateHidden"
        />
    <activity android:name=".ui.activity.trade.ChooseLogisticsCompanyActivity"
        android:theme="@style/AppTheme.TransparentActivity"
        />
    <activity android:name=".ui.activity.trade.WriteLogisticsInfoActivty"
        android:theme="@style/AppTheme.TransparentActivity"
        />
    <activity android:name=".ui.activity.product.SizeActivity"
        android:theme="@style/AppTheme.TransparentActivity"
        />

    <activity android:name=".ui.activity.product.WashingIntrductionActivity"
        android:theme="@style/AppTheme.TransparentActivity"
        />
    <activity android:name=".ui.activity.product.ChildListActivity"
        android:theme="@style/AppTheme.TransparentActivity"
        />
    <activity android:name=".ui.activity.product.LadyListActivity"
        android:theme="@style/AppTheme.TransparentActivity"
        />
    <activity android:name=".ui.activity.main.WebViewActivity"
        android:theme="@style/AppTheme.TransparentActivity"
        />

    <activity
        android:name="com.mob.tools.MobUIShell"
        android:theme="@android:style/Theme.Translucent.NoTitleBar"
        android:configChanges="keyboardHidden|orientation|screenSize"
        android:windowSoftInputMode="stateHidden|adjustResize"/>

    <!--微信分享回调 -->
    <activity
        android:name=".wxapi.WXEntryActivity"
        android:theme="@android:style/Theme.Translucent.NoTitleBar"
        android:configChanges="keyboardHidden|orientation|screenSize"
        android:exported="true"
        android:screenOrientation="portrait"/>

  </application>

</manifest>
