<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="so.xiaolu.xiaolu" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="19" />
    
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".utils.VolleyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".UI.LoadingActivity"
            android:label="@string/app_name"
            android:theme="@style/customLoading" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".UI.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".UI.tongkuanActivity"
            android:label="同款" />
        <activity
            android:name=".UI.ProductDetailActivity"
            android:label="@string/title_activity_product_detail"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".trade.TradeCommodityActivity"
            android:label="@string/title_activity_TradeCommodity"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".mainsetting.SettingLoginActivity"
            android:label="@string/title_activity_login"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".mainsetting.SettingRegisterActivity"
            android:label="@string/title_activity_register"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".orders.AllOrdersActivity"
            android:label="@string/title_activity_allorders"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>

        <activity
            android:name=".orders.OrderDetailActivity"
            android:label="@string/title_activity_orderdetail"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
    </application>

</manifest>
