<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.jimei.xiaolumeimei.widget.XlmmTitleView
        android:id="@+id/title_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:xlmm_title="注册" />

    <include layout="@layout/common_gap" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="110px"
        android:background="@null"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="10sp"
        android:paddingRight="10sp">

        <com.jimei.xiaolumeimei.widget.ClearEditText
            android:id="@+id/register_name"
            style="@style/EditTextStyle"
            android:textCursorDrawable="@drawable/color_cursor"
            android:layout_width="match_parent"
            android:hint="请输入手机号"
            android:inputType="phone"
            android:maxLength="11" />

    </LinearLayout>

    <include layout="@layout/common_gap" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="110px"
        android:background="@null"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="10sp"
        android:paddingRight="10sp"
        android:weightSum="3">

        <EditText
            android:id="@+id/register_password"
            style="@style/EditTextStyle"
            android:textCursorDrawable="@drawable/color_cursor"
            android:layout_width="0dp"
            android:layout_weight="2.5"
            android:hint="请输入验证码"
            android:inputType="number"
            android:maxLength="6" />

        <Button
            android:id="@+id/getCheckCode"
            android:layout_width="100px"
            android:layout_height="64px"
            android:layout_weight="0.5"
            android:background="@drawable/btn_common_white"
            android:text="获取验证码"
            android:textColor="@color/colorAccent" />
    </LinearLayout>

    <include layout="@layout/common_gap" />

    <Button
        android:id="@+id/register_button"
        android:layout_width="656px"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50px"
        android:background="@drawable/btn_common_default"
        android:text="@string/next"
        android:textColor="@color/white" />

</LinearLayout>