<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/iv_zoom"
                android:layout_width="match_parent"
                android:layout_height="820px"
                android:scaleType="centerCrop"
                android:contentDescription="@string/app_name"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/img_share"
                android:src="@drawable/ic_share"
                android:layout_marginLeft="640px"
                android:layout_marginRight="8px"
                android:layout_marginTop="56px"
                />
        </FrameLayout>

        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView android:layout_width="wrap_content"
                android:textColor="@color/colorPrimary"
                android:textSize="20sp"
                android:text=""
                android:id="@+id/price1"
                android:layout_height="wrap_content"/>

            <TextView android:layout_width="wrap_content"
                android:textSize="12sp"
                android:text=""
                android:id="@+id/price2"
                android:layout_height="wrap_content"/>

        </LinearLayout>
        <TextView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:id="@+id/name"
            android:text=""
            android:layout_height="wrap_content"
            />
        <cn.iwgang.countdownview.CountdownView
            android:layout_marginTop="4dp"
            android:id="@+id/cv_countdownView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            app:isShowDay="true"
            app:isShowHour="true"
            app:isShowMinute="true"
            app:isShowSecond="true"
            app:isTimeTextBold="true"
            app:suffixDay="天"
            app:suffixHour="小时"
            app:suffixMinute="分钟"
            app:suffixSecond="秒"
            app:suffixGravity="bottom"
            app:suffixTextColor="@color/colorPrimary"
            app:suffixTextSize="10sp"
            app:timeTextColor="@color/colorPrimary"
            app:timeTextSize="18sp"/>
        <View android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_marginTop="8dp"
            android:background="@color/greytow"/>
        <ImageView
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:layout_width="622px"
            android:layout_height="102px"
            android:src="@drawable/zhengpin"
            />
        <View android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_marginTop="8dp"
            android:background="@color/greytow"/>
        <com.jimei.xiaolumeimei.widget.TagFlowLayout
            android:id="@+id/id_flowlayout"
            app:max_select="1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="20dp">
        </com.jimei.xiaolumeimei.widget.TagFlowLayout>


        <View android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_marginTop="8dp"
            android:background="@color/greytow"/>
        <LinearLayout
            android:padding="4dp"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:text="商品编号"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_marginLeft="16dp"
                android:id="@+id/shangpinbianhao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:padding="4dp"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:text="商品材质"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginLeft="16dp"
                android:id="@+id/shagpincaizhi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:padding="4dp"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:text="可选颜色"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginLeft="16dp"
                android:id="@+id/kexuanyanse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>
        <LinearLayout
            android:padding="4dp"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:text="商品备注"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginLeft="16dp"
                android:id="@+id/shangpinnbeizhu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <View android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_marginTop="8dp"
            android:background="@color/greytow"/>
        <ImageView
            android:layout_gravity="center"
            android:src="@drawable/sku"
            android:layout_width="548px"
            android:layout_height="122px"/>

        <include layout="@layout/common_gap"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120px"/>

    </LinearLayout>

    <LinearLayout
        android:layout_alignParentBottom="true"
        android:padding="8dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="@color/white"
        android:layout_height="wrap_content">
        <!--<com.jimei.xiaolumeimei.widget.badgelib.BadgeFrameLayout-->
        <!--android:id="@+id/badge_layout"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!-->-->
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
            <RelativeLayout
                android:id="@+id/rv_cart"
                android:layout_width="200px"
                android:layout_height="100px"
                android:background="@drawable/shape_cart"
                >
                <ImageView
                    android:layout_centerInParent="true"
                    android:id="@+id/image_1"
                    android:src="@drawable/cart2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />

            </RelativeLayout>

            <Button
                android:layout_alignParentRight="true"
                android:layout_marginLeft="100px"
                android:layout_height="100px"
                android:textColor="@color/white"
                android:text="加入购物车"
                android:layout_gravity="end"
                android:background="@drawable/shape_common"
                android:id="@+id/shopping_button"
                android:layout_width="458px"
                />
        </RelativeLayout>
        <!--</com.jimei.xiaolumeimei.widget.badgelib.BadgeFrameLayout>-->
    </LinearLayout>


</RelativeLayout>