<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F3F3F4">

        <TextView
            android:id="@+id/shoptime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20px"
            android:textSize="16sp"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/total_cash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20px"
            android:textSize="16sp"
            android:layout_alignParentRight="true" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#DADADA"
            android:layout_below="@id/shoptime"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="20px">

        <com.jimei.xiaolumeimei.widget.RoundCornerImageView
            android:id="@+id/pic_path"
            android:layout_width="130px"
            android:layout_height="130px"/>

        <TextView
            android:id="@+id/wxordernick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_toRightOf="@id/pic_path"
            android:padding="6px"
            android:layout_marginLeft="6dp"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:textSize="16sp"
            android:textColor="@color/black" />


        <TextView
            android:id="@+id/time_display"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/pic_path"
            android:padding="6px"
            android:text=""
            android:layout_marginLeft="6dp"
            android:textSize="15sp"
            android:textColor="@color/c8c8c8" />

        <TextView
            android:id="@+id/get_status_display"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/time_display"
            android:padding="6px"
            android:text=""
            android:textSize="15sp"
            android:layout_marginLeft="6dp"
            android:textColor="@color/colorPrimary" />

        <TextView
            android:id="@+id/ticheng_cash"
            android:text=""
            android:textSize="20sp"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black" />

    </RelativeLayout>
</LinearLayout>