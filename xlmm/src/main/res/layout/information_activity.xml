<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.jimei.library.widget.XlmmTitleView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:xlmm_title="个人信息" />

    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_grey"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_head"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/debug"
                android:layout_width="fill_parent"
                android:layout_height="150px"
                android:gravity="center_vertical"
                android:minHeight="?android:listPreferredItemHeight"
                android:orientation="horizontal">

                <TextView
                    android:id="@android:id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24dp"
                    android:ellipsize="marquee"
                    android:fadingEdge="horizontal"
                    android:singleLine="true"
                    android:text="头像"
                    android:textColor="@color/primary_text"
                    android:textSize="16sp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="16dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <com.jimei.library.widget.CircleImageView
                        android:id="@+id/user_img"
                        android:layout_width="120px"
                        android:layout_height="120px"
                        android:src="@drawable/img_head" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:src="@mipmap/common_icon_right_arrow" />
                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:background="#CCCCCC" />
        </LinearLayout>

        <com.jimei.library.widget.MyPreferenceView
            android:id="@+id/nick_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.jimei.library.widget.MyPreferenceView
            android:id="@+id/bind_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.jimei.library.widget.MyPreferenceView
            android:id="@+id/edit_pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.jimei.library.widget.MyPreferenceView
            android:id="@+id/edit_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.jimei.library.widget.MyPreferenceView
            android:id="@+id/setting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.jimei.library.widget.MyPreferenceView
            android:id="@+id/login_out"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>
</LinearLayout>