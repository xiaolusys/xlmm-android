<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.jimei.xiaolumeimei.ui.activity.product.ProductDetailActivity">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <com.jimei.xiaolumeimei.widget.PullUpToLoadMore
                android:id="@+id/pull_to_load"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.jimei.xiaolumeimei.widget.MyScrollView
                    android:id="@+id/sv_first"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fillViewport="true">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <android.support.v4.view.ViewPager
                            android:id="@+id/view_pager"
                            android:layout_width="match_parent"
                            android:layout_height="480dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="820px"
                            android:background="@color/white"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="15px"
                                android:gravity="center|bottom"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/agent_price"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="¥49"
                                    android:textColor="@color/colorAccent"
                                    android:textSize="35sp" />

                                <TextView
                                    android:id="@+id/sale_price"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="/¥249"
                                    android:textColor="@color/text_color_9B"
                                    android:textSize="14sp" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="15px"
                                android:gravity="center">

                                <TextView
                                    android:id="@+id/name"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:ellipsize="end"
                                    android:singleLine="true"
                                    android:text="韩版大摆加厚卫衣/ 大红"
                                    android:textColor="@color/text_color_4A"
                                    android:textSize="16sp" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="90px"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="12dp"
                                    android:text="剩余"
                                    android:textColor="@color/colorAccent"
                                    android:textSize="13sp" />

                                <RelativeLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">

                                    <cn.iwgang.countdownview.CountdownView
                                        android:id="@+id/count_view"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        app:isHideTimeBackground="false"
                                        app:isShowHour="true"
                                        app:isShowMillisecond="false"
                                        app:isShowMinute="true"
                                        app:isShowSecond="true"
                                        app:isShowTimeBgDivisionLine="false"
                                        app:isSuffixTextBold="true"
                                        app:isTimeTextBold="true"
                                        app:suffixDay="天"
                                        app:suffixGravity="center"
                                        app:suffixHour="时"
                                        app:suffixMinute="分"
                                        app:suffixSecond="秒"
                                        app:suffixTextColor="@color/colorAccent"
                                        app:suffixTextSize="12sp"
                                        app:timeBgColor="@color/white"
                                        app:timeTextColor="@color/colorAccent"
                                        app:timeTextSize="13sp" />

                                </RelativeLayout>


                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/bg_grey" />

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="150px"
                                android:gravity="center">

                                <ImageView
                                    android:layout_width="622px"
                                    android:layout_height="102px"
                                    android:src="@drawable/zhengpin" />
                            </RelativeLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/bg_grey" />

                            <LinearLayout
                                android:id="@+id/ll_attr"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:padding="32px">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="6px"
                                    android:text="商品参数"
                                    android:textColor="@color/text_color_32"
                                    android:textSize="16sp"
                                    android:textStyle="bold" />

                            </LinearLayout>

                        </LinearLayout>

                    </FrameLayout>

                </com.jimei.xiaolumeimei.widget.MyScrollView>

                <com.jimei.xiaolumeimei.widget.MyScrollView
                    android:id="@+id/sv_second"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:fillViewport="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:descendantFocusability="blocksDescendants"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="140px"
                            android:background="@color/bg_grey"
                            android:gravity="center"
                            android:text="继续拖动查看图文详情" />

                        <WebView
                            android:id="@+id/web_view"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                </com.jimei.xiaolumeimei.widget.MyScrollView>

            </com.jimei.xiaolumeimei.widget.PullUpToLoadMore>

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="140px"
                android:alpha="0"
                android:background="@color/colorAccent"
                android:gravity="bottom|center_horizontal"
                android:paddingBottom="30px"
                android:text="商品详情"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="140px"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/finish"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="25px"
                        android:layout_marginLeft="35px"
                        android:layout_marginRight="35px"
                        android:src="@drawable/icon_finish_detail" />
                </RelativeLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <RelativeLayout
                    android:id="@+id/share"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="25px"
                        android:layout_marginLeft="35px"
                        android:layout_marginRight="35px"
                        android:src="@drawable/icon_share_detail" />
                </RelativeLayout>

            </LinearLayout>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/bg_grey2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="115px"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_one"
                android:layout_width="0dp"
                android:layout_height="76px"
                android:layout_marginLeft="32px"
                android:layout_weight="1"
                android:background="@drawable/shape_getcheckcode"
                android:gravity="center"
                android:text="单独购"
                android:textColor="@color/colorAccent"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_three"
                android:layout_width="0dp"
                android:layout_height="76px"
                android:layout_marginLeft="32px"
                android:layout_marginRight="32px"
                android:layout_weight="1"
                android:background="@drawable/shape_common"
                android:gravity="center"
                android:text="三人购"
                android:textColor="@color/white"
                android:textSize="16sp" />

        </LinearLayout>

    </LinearLayout>
</layout>

