<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/y53"
    android:layout_gravity="bottom"
    android:background="#ffffff"
    android:orientation="vertical"
    android:gravity="center"
    app:layout_behavior=".behavior.QuickHideBehavior">
  <LinearLayout
      android:layout_marginTop="@dimen/y5"
      android:layout_width="match_parent"
      android:orientation="horizontal"
      android:gravity="center"
      android:layout_height="@dimen/y15"
  >
    <TextView
        android:textColor="#26262e"
        android:layout_width="wrap_content"
        android:text="应付款金额"
        android:layout_height="wrap_content"
    />
    <TextView
        android:id="@+id/total_price"
        android:textSize="20sp"
        android:textColor="@color/colorPrimary"
        android:layout_width="wrap_content"
        android:text=""
        android:layout_height="wrap_content"
    />
  </LinearLayout>
  <Button
      android:layout_marginBottom="@dimen/y6"
      android:textSize="20sp"
      android:textColor="@color/white"
      android:text="购买"
      android:id="@+id/confirm"
      android:layout_width="600px"
      android:background="@drawable/shape_common"
      android:layout_height="@dimen/y18"
  />
</LinearLayout>