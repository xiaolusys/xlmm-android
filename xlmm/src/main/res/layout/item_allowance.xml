<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rlayout_order_lefttime"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_sum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8px"
            android:text=""
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_today_allowance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:padding="8px"
            android:text="总收益 0.00"
            android:textSize="15sp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_tip"
            android:layout_width="84px"
            android:layout_height="84px"
            android:layout_marginLeft="8px"
            android:src="@drawable/img_yellowreturn" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/img_tip"
            android:padding="8px"
            android:text=""
            android:textSize="10sp" />

        <TextView
            android:id="@+id/tv_click_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_time"
            android:layout_toRightOf="@id/img_tip"
            android:padding="8px"
            android:text=""
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_one_allowance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:padding="8px"
            android:text="+ 0.00"
            android:textSize="15sp" />
    </RelativeLayout>


</LinearLayout>