<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/AppTheme.AppBarOverlay"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.jimei.xiaolumeimei.widget.XlmmTitleView
        android:id="@+id/title_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:xlmm_title="申请退货" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/title_view"
        android:background="@color/bg_grey"
        android:padding="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <include layout="@layout/common_gap" />

            <include layout="@layout/one_order_item" />

            <include layout="@layout/common_gap" />

            <View
                android:layout_width="match_parent"
                android:layout_height="30px"
                android:background="@color/bg_grey" />

            <include layout="@layout/common_gap" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="92px"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="申请数量："
                    android:textSize="15sp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/img_dec"
                    android:gravity="center"
                    android:textColor="@color/colorPrimary"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tx_refund_num"
                    android:layout_width="48px"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="1"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/add"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/img_inc"
                    android:gravity="center"
                    android:textColor="@color/colorPrimary"
                    android:textSize="12sp" />
            </LinearLayout>

            <include layout="@layout/common_gap" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="92px"
                android:background="@color/white"
                android:orientation="horizontal"
                android:padding="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:gravity="center"
                    android:text="可退金额："
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tx_refundfee"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:gravity="center"
                    android:textColor="@color/colorAccent"
                    android:text="￥120"
                    android:textSize="15sp" />
            </RelativeLayout>

            <include layout="@layout/common_gap" />

            <View
                android:layout_width="match_parent"
                android:layout_height="30px"
                android:background="@color/bg_grey" />

            <include layout="@layout/common_gap" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="352px"
                android:orientation="vertical"
                android:padding="8dp">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="57px"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:gravity="center"
                    android:text="退货原因"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/et_refund_reason"
                    android:layout_width="match_parent"
                    android:layout_height="70px"
                    android:layout_below="@+id/textView"
                    android:layout_marginLeft="10px"
                    android:layout_marginRight="10px"
                    android:layout_marginTop="10px"
                    android:background="@drawable/text_frame"
                    android:cursorVisible="false"
                    android:drawableRight="@drawable/ic_downarrow"
                    android:focusable="false"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:text="请选择退货原因"
                    android:textCursorDrawable="@drawable/color_cursor"
                    android:textSize="15sp" />

                <com.jimei.xiaolumeimei.widget.ClearEditText
                    android:id="@+id/et_refund_info"
                    android:layout_width="match_parent"
                    android:layout_height="180px"
                    android:layout_below="@+id/et_refund_reason"
                    android:layout_marginLeft="10px"
                    android:layout_marginRight="10px"
                    android:layout_marginTop="10px"
                    android:background="@drawable/text_frame"
                    android:cursorVisible="false"
                    android:focusable="false"
                    android:gravity="top"
                    android:maxLength="80"
                    android:padding="8dp"
                    android:text="请输入退货说明"
                    android:textCursorDrawable="@drawable/color_cursor"
                    android:textSize="15sp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="200px"
                android:orientation="vertical"
                android:padding="8dp">

                <TextView
                    android:id="@+id/tv_upload"
                    android:layout_width="wrap_content"
                    android:layout_height="40px"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:text="上传凭证"
                    android:textSize="15sp" />

                <RelativeLayout
                    android:id="@+id/rl_proof_pic"
                    android:layout_width="match_parent"
                    android:layout_height="120px"
                    android:layout_below="@+id/tv_upload">

                    <ImageView
                        android:id="@+id/imgbtn_camera_pic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_camera" />

                    <RelativeLayout
                        android:id="@+id/rl_proof_pic1"
                        android:layout_width="120px"
                        android:layout_marginLeft="10dp"
                        android:layout_height="match_parent"
                        android:layout_toRightOf="@+id/imgbtn_camera_pic"
                        android:visibility="invisible">

                        <include layout="@layout/proof_pic" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl_proof_pic2"
                        android:layout_width="120px"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/rl_proof_pic1"
                        android:visibility="invisible">

                        <include layout="@layout/proof_pic" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl_proof_pic3"
                        android:layout_width="120px"
                        android:layout_marginLeft="10dp"
                        android:layout_height="match_parent"
                        android:layout_toRightOf="@+id/rl_proof_pic2"
                        android:visibility="invisible">

                        <include layout="@layout/proof_pic" />
                    </RelativeLayout>

                </RelativeLayout>
            </RelativeLayout>

            <Button
                android:id="@+id/btn_commit"
                android:layout_width="690px"
                android:layout_height="80px"
                android:layout_marginTop="40dp"
                android:background="@color/colorAccent"
                android:text="提交申请"
                android:textColor="@color/white"
                android:textSize="15sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="30dp" />

        </LinearLayout>
    </ScrollView>


</RelativeLayout>