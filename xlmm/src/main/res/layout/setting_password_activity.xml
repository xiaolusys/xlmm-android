<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.jimei.xiaolumeimei.widget.XlmmTitleView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:xlmm_title="设置密码" />

    <include layout="@layout/common_gap" />

    <EditText
        android:id="@+id/set_password"
        style="@style/EditTextStyle"
        android:layout_width="match_parent"
        android:background="@null"
        android:hint="请输入6-16位新密码"
        android:inputType="textPassword"
        android:maxLength="16" />

    <include layout="@layout/common_gap" />

    <EditText
        android:id="@+id/set_password2"
        style="@style/EditTextStyle"
        android:layout_width="fill_parent"
        android:background="@null"
        android:hint="请再次输入密码"
        android:inputType="textPassword"
        android:maxLength="16" />

    <include layout="@layout/common_gap" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <android.support.v7.widget.AppCompatCheckBox
            android:id="@+id/check_agree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="注册即视为同意" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="小鹿美美服务条款"
            android:textColor="@color/colorAccent" />
    </LinearLayout>


    <Button
        android:id="@+id/set_commit_button"
        android:layout_width="656px"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:background="@drawable/btn_common_default"
        android:gravity="center"
        android:text="注册"
        android:textColor="@color/white"
        android:textSize="16sp" />


</LinearLayout>