<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
  <data>
    <variable
        name="personalInfo"
        type="com.jimei.xiaolumeimei.entities.PersonalCarryRankBean"
        />
  </data>
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical"
      >
    <com.jimei.xiaolumeimei.widget.XlmmTitleView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:xlmm_title="个人收益排名"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="210px"
        android:background="@color/colorAccent"
        >
      <RelativeLayout
          android:id="@+id/imgCircleStar"
          android:layout_width="130px"
          android:layout_height="130px"
          android:layout_marginLeft="20px"
          android:layout_marginTop="15px"
          android:clickable="true"
          android:gravity="center"
          >

        <ImageView
            android:layout_width="130px"
            android:layout_height="130px"
            android:scaleType="fitXY"
            android:src="@drawable/img_circlestar"
            />

        <ImageView
            android:id="@+id/imgUser"
            android:layout_width="114px"
            android:layout_height="114px"
            android:layout_centerInParent="true"
            android:layout_margin="8px"
            android:clickable="true"
            />


      </RelativeLayout>
      <RelativeLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@id/imgCircleStar"
          android:layout_marginLeft="20px"
          android:layout_marginTop="15px"
          android:clickable="true"
          android:gravity="center"
          >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{personalInfo.mamaNick}"
            />

      </RelativeLayout>
      <TextView
          android:id="@+id/tv_rank"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="20px"
          android:layout_marginTop="20px"
          android:layout_toRightOf="@id/imgCircleStar"
          android:textColor="@color/white"
          android:textSize="30px"
          />

      <TextView
          android:id="@+id/tv_carry"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@id/tv_rank"
          android:layout_marginLeft="20px"
          android:layout_marginTop="25px"
          android:layout_toRightOf="@id/imgCircleStar"
          android:textSize="30px"
          />

      <TextView
          android:id="@+id/tv_rank_change"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@id/tv_rank"
          android:layout_marginLeft="40px"
          android:layout_marginTop="25px"
          android:layout_toRightOf="@id/tv_carry"
          android:textSize="30px"
          />
    </RelativeLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />
  </LinearLayout>
</layout>