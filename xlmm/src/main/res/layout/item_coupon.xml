<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
	android:id="@+id/ll_coupon_item">

	<RelativeLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal" >
		<TextView
			android:id="@+id/tv_coupon_value"
			android:layout_width="wrap_content"
			android:layout_height="32dp"
			android:text="￥10"
			android:textSize="30sp"
			android:gravity="bottom" />

		<TextView
			android:id="@+id/tv_coupon_info"
			android:layout_width="wrap_content"
			android:layout_height="32dp"
			android:text="满99使用"
			android:textSize="15sp"
			android:layout_alignParentTop="true"
			android:layout_alignParentRight="true"
			android:layout_alignParentEnd="true"
			android:gravity="bottom" />
	</RelativeLayout>

	<include layout="@layout/common_gap" />

	<RelativeLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal" >
		<TextView
			android:id="@+id/tv_coupon_crttime"
			android:layout_width="wrap_content"
			android:layout_height="18dp"
			android:text="使用期限"
			android:textSize="8sp"
			android:gravity="bottom" />

		<TextView
			android:id="@+id/tv_coupon_deadline"
			android:layout_width="wrap_content"
			android:layout_height="18dp"
			android:text="至"
			android:textSize="8sp"
			android:layout_alignParentTop="true"
			android:layout_alignParentRight="true"
			android:layout_alignParentEnd="true"
			android:gravity="bottom" />
	</RelativeLayout>

	<RelativeLayout
		android:layout_width="fill_parent"
		android:layout_height="18dp"
		android:orientation="horizontal" >
		<TextView
			android:id="@+id/tv_coupon_type"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:text="使用范围"
			android:textSize="8sp"
			android:gravity="bottom" />

		<TextView
			android:id="@+id/tv_coupon_no"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:text="优惠编码"
			android:textSize="8sp"
			android:layout_alignParentTop="true"
			android:layout_alignParentRight="true"
			android:layout_alignParentEnd="true"
			android:gravity="bottom" />
	</RelativeLayout>

</LinearLayout>