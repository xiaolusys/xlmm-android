<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
	android:id="@+id/ll_coupon_item"
	android:background="@drawable/bg_img_coupon">

	<RelativeLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:layout_marginLeft="120px"
		android:padding="4dp">
		<TextView
			android:id="@+id/tv_coupon_value"
			android:layout_width="wrap_content"
			android:layout_height="32dp"
			android:text="￥10"
			android:textColor="@android:color/holo_red_light"
			android:textSize="30sp"
			android:gravity="bottom" />

		<TextView
			android:id="@+id/tv_coupon_info"
			android:layout_width="wrap_content"
			android:layout_height="32dp"
			android:text="满99使用"
			android:textSize="15sp"
			android:layout_alignParentTop="true"
			android:layout_alignParentRight="true"
			android:layout_alignParentEnd="true"
			android:gravity="bottom"
			android:layout_toRightOf="@+id/tv_coupon_value"
			android:layout_marginLeft="10px"/>
	</RelativeLayout>

	<ImageView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:id="@+id/img_selected"
		android:src="@drawable/img_mark_selected_coupon"
		android:layout_alignParentRight="true"
		android:padding="4dp"
		android:visibility="invisible"/>

	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:layout_marginLeft="120px"
		android:layout_marginTop="110px">
		<TextView
			android:id="@+id/tv_coupon_crttime"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="使用期限"
			android:textSize="8sp"
			android:gravity="bottom" />

		<TextView
			android:id="@+id/tv_coupon_deadline"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="至"
			android:textSize="8sp"
			android:layout_alignParentTop="true"
			android:layout_alignParentRight="true"
			android:layout_alignParentEnd="true"
			android:gravity="bottom" />
	</LinearLayout>

	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:layout_marginLeft="120px"
		android:layout_marginTop="160px">
		<TextView
			android:id="@+id/tv_coupon_type"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="使用范围"
			android:textSize="8sp"
			android:gravity="bottom" />

		<TextView
			android:id="@+id/tv_coupon_no"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="优惠编码"
			android:textSize="8sp"
			android:gravity="bottom" />
	</LinearLayout>

</RelativeLayout>