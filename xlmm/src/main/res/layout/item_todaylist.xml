

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shot_item_background"
    android:clickable="true"
    android:foreground="?attr/selectableItemBackground"
    android:orientation="vertical">

  <RelativeLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content">

    <ImageView
        android:adjustViewBounds="true"
        android:id="@+id/childlist_image"
        android:layout_width="match_parent"
        android:layout_height="450px"
        android:scaleType="centerCrop"/>

    <include layout="@layout/item_saleout"/>
    <include layout="@layout/item_salenotopen"/>
    <include layout = "@layout/item_saleoff"/>
  </RelativeLayout>


  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="43px"
      android:layout_marginTop="26px"
      android:gravity="center">

    <TextView
        android:id="@+id/childlist_name"
        android:layout_width="wrap_content"
        android:layout_height="36px"
        android:text=""
        android:textColor="#4a4a4a"
        android:textSize="28px"/>
  </LinearLayout>

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="46px"
      android:layout_marginBottom="12px"
      android:gravity="center"
      android:orientation="horizontal">

    <TextView
        android:gravity="center|bottom"
        android:textSize="36px"
        android:id="@+id/childlist_agent_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="#3C3C3C"/>

    <TextView
        android:layout_alignBaseline="@id/childlist_agent_price"
        android:layout_toRightOf="@id/childlist_agent_price"
        android:id="@+id/childlist_stdsale_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="#A0A0A0"
        android:textSize="24px"/>
  </RelativeLayout>

</LinearLayout>