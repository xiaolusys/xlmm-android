<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.jimei.library.widget.XlmmTitleView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:xlmm_title="提现" />

    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/rl_result"
            android:layout_width="match_parent"
            android:layout_height="500px"
            android:background="@drawable/text_frame"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_red_packet1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="90px"
                android:clickable="true"
                android:src="@drawable/img_redpacket100_2" />

            <TextView
                android:id="@+id/tv_msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15px"
                android:gravity="center"
                android:text="提现申请已提交"
                android:textSize="26px" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="30px"
                android:text="小鹿美美公众号将会在24小时内将红包发到"
                android:textColor="@color/colorAccent"
                android:textSize="22px" />

            <TextView
                android:id="@+id/tv_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10px"
                android:gravity="center"
                android:text="微信账号："
                android:textSize="26px" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/rl_publish"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_gray_packet1"
                android:layout_width="120px"
                android:layout_height="120px"
                android:layout_marginTop="40px"
                android:src="@drawable/img_return" />


            <TextView
                android:id="@+id/tv_info2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="46px"
                android:gravity="center"
                android:text="@string/publish_info" />

            <Button
                android:id="@+id/btn_jump"
                android:layout_width="190px"
                android:layout_height="80px"
                android:layout_marginTop="50px"
                android:background="@drawable/btn_common_default"
                android:padding="10px"
                android:text="发布产品"
                android:textColor="@color/white"
                android:textSize="15sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
