<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/AppTheme.AppBarOverlay">

    <com.jimei.xiaolumeimei.widget.XlmmTitleView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:xlmm_title="提现"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="500px"
        android:id="@+id/rl_result"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:background="@drawable/text_frame">

        <ImageView
            android:id="@+id/img_red_packet1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="90px"
            android:clickable="true"
            android:src="@drawable/img_redpacket100_2"
            />

        <TextView
            android:id="@+id/tv_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="提现申请已提交"
            android:gravity="center"
            android:textSize="26px"
            android:layout_marginTop="15px"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30px"
            android:text="小鹿美美公众号将会在24小时内将红包发到"
            android:textSize="22px"
            android:layout_gravity="center"
            android:textColor="@color/colorAccent"/>

        <TextView
            android:id="@+id/tv_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="26px"
            android:layout_marginTop="10px"
            android:text="微信账号："/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:id="@+id/rl_publish">

        <ImageView
            android:id="@+id/img_gray_packet1"
            android:layout_width="120px"
            android:layout_height="120px"
            android:layout_marginTop="40px"
            android:src="@drawable/img_return"
            />


        <TextView
            android:id="@+id/tv_info2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="46px"
            android:text="@string/publish_info" />

        <Button
            android:id="@+id/btn_jump"
            android:layout_width="190px"
            android:layout_height="80px"
            android:layout_marginTop="50px"
            android:padding="10px"
            android:text="发布产品"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:background="@drawable/btn_common_default" />
    </LinearLayout>



</LinearLayout>
