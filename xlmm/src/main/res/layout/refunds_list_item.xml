<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

	<RelativeLayout
		android:layout_width="fill_parent"
		android:layout_height="70px"
		android:padding="4dp"
		android:orientation="horizontal" >
		<TextView
			android:id="@+id/tx_refund_no"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:text="订单编号"
			android:textSize="13sp" />

		<TextView
			android:id="@+id/tx_refund_state"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:text="交易关闭"
			android:textColor="@color/colorAccent"
			android:textSize="13sp"
			android:layout_alignParentTop="true"
			android:layout_alignParentRight="true"
			android:layout_alignParentEnd="true" />
	</RelativeLayout>

	<include layout="@layout/common_gap" />

	<include layout="@layout/one_order_item"/>

	<include layout="@layout/common_gap" />

	<RelativeLayout
		android:layout_width="fill_parent"
		android:layout_height="32dp"
		android:padding="4dp"
		android:orientation="horizontal" >
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:text="申请数量"
			android:textSize="15sp"
			android:layout_alignParentTop="true"
			android:layout_alignParentLeft="true"
			android:layout_alignParentStart="true" />

		<TextView
			android:id="@+id/tx_refund_num"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:text="1"
			android:textSize="15sp"
			android:layout_alignParentTop="true"
			android:layout_alignParentRight="true"
			android:layout_alignParentEnd="true" />
	</RelativeLayout>

	<include layout="@layout/common_gap" />

	<RelativeLayout
		android:layout_width="fill_parent"
		android:layout_height="32dp"
		android:padding="4dp"
		android:orientation="horizontal" >
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:text="可退金额："
			android:textSize="15sp"
			android:layout_alignParentTop="true"
			android:layout_alignParentLeft="true"
			android:layout_alignParentStart="true" />

		<TextView
			android:id="@+id/tx_refundfee"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:text="￥0"
			android:textSize="15sp"
			android:layout_alignParentTop="true"
			android:layout_alignParentRight="true"
			android:layout_alignParentEnd="true" />
	</RelativeLayout>

	<include layout="@layout/common_gap" />

	<RelativeLayout
		android:layout_width="fill_parent"
		android:layout_height="32dp"
		android:padding="4dp"
		android:orientation="horizontal" >
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:text="退款原因"
			android:textSize="15sp"
			android:layout_alignParentTop="true"
			android:layout_alignParentLeft="true"
			android:layout_alignParentStart="true" />

		<TextView
			android:id="@+id/tx_refund_reason"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:text="其他"
			android:textSize="15sp"
			android:layout_alignParentTop="true"
			android:layout_alignParentRight="true"
			android:layout_alignParentEnd="true" />
	</RelativeLayout>

</LinearLayout>