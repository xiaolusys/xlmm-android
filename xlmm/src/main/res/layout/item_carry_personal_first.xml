<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
  <data>
    <variable
        name="item"
        type="com.jimei.xiaolumeimei.entities.PersonalCarryRankBean"
        />
  </data>
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:gravity="center_vertical"
      android:padding="14px"
      >
    <ImageView
        android:id="@+id/first"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8px"
        android:src="@drawable/personal_first"
        />
    <ImageView
        android:id="@+id/user_image"
        android:layout_width="90px"
        android:layout_height="90px"
        android:layout_marginLeft="25px"
        app:imageUrl="@{item.thumbnail}"
        />
    <TextView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_marginLeft="31px"
        android:layout_marginRight="31px"
        android:singleLine="true"
        android:ellipsize="end"
        android:text="@{item.mamaNick}"
        />
    <TextView
        android:id="@+id/total_carry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="20px"
        android:text="@{String.valueOf(Double.valueOf(item.total)/Double.valueOf(100))}"
        android:textColor="@color/colorAccent"
        android:textSize="20sp"
        />
  </LinearLayout>
</layout>