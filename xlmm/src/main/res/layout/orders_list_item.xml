<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:padding="4dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/llayout_order_item">

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="32dp"
      android:orientation="horizontal">
    <LinearLayout android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        >

      <TextView
          android:id="@+id/tx_money"
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:text="实付金额"
          android:textSize="13sp"
          android:gravity="center_vertical"/>
      <TextView
          android:textColor="@color/colorPrimary"
          android:id="@+id/tx_order_actual_payment"
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:text="@string/productprice"
          android:textSize="13sp"
          android:gravity="center_vertical"/>

    </LinearLayout>


    <TextView
        android:id="@+id/tx_order_left_paytime"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="剩余时间"
        android:textSize="13sp"
        android:gravity="center_vertical"
        android:layout_alignParentTop="false"
        android:layout_toLeftOf="@+id/cv_lefttime"
        android:layout_toStartOf="@+id/cv_lefttime"
        android:layout_alignParentBottom="true"
        android:visibility="invisible"/>

    <cn.iwgang.countdownview.CountdownView
        android:id="@+id/cv_lefttime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_vertical"
        app:isShowMinute="true"
        app:isShowSecond="true"
        app:isShowMillisecond="false"
        app:suffixGravity="center"
        app:suffixTextColor="#000000"
        app:suffixTextSize="12sp"
        app:timeTextColor="#FFFFFF"
        app:timeTextSize="12sp"


        app:isShowTimeBgDivisionLine="false"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:id="@+id/tx_order_state"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="交易关闭"
        android:textSize="13sp"
        android:textColor="@color/colorAccent"
        android:gravity="center_vertical"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="false"
        android:layout_toLeftOf="@+id/btn_order_proc"
        android:layout_toStartOf="@+id/btn_order_proc"
        android:layout_alignParentBottom="true"/>

    <Button
        android:id="@+id/btn_order_proc"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="立即支付"
        android:textSize="8sp"
        android:layout_alignParentRight="true"
        android:visibility="invisible"/>
  </RelativeLayout>

</LinearLayout>