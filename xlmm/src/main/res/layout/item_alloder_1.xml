<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
  <LinearLayout
      android:padding="8dp"
      android:layout_width="match_parent"
      android:orientation="horizontal"
      android:layout_height="wrap_content">
    <TextView
        android:text="实付金额"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <TextView android:layout_width="wrap_content"
        android:text="79.9"
        android:textColor="@color/colorPrimary"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_gravity="right"
        android:text="待支付"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
  </LinearLayout>
  <View
      android:background="@color/C646464"
      android:layout_width="match_parent"
      android:layout_height="1dp"/>
  <RelativeLayout
      android:padding="8dp"
      android:layout_width="match_parent"
      android:layout_height="match_parent">
    <ImageView
        android:id="@+id/alloder_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        />
    <TextView
        android:id="@+id/oder_name"
        android:layout_toRightOf="@id/alloder_image"
        android:layout_width="wrap_content"
        android:text="韩版百搭牛仔外套/图片色"
        android:layout_height="wrap_content"
        />
    <TextView
        android:id="@+id/order_chima"
        android:layout_alignBottom="@id/alloder_image"
        android:layout_marginBottom="8dp"
        android:layout_toRightOf="@id/alloder_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="尺码: S"
        />

    <TextView
        android:id="@+id/oder_price"
        android:layout_alignParentRight="true"
        android:text="79.9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_alignBottom="@id/alloder_image"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:text="x1"
        android:layout_height="wrap_content"
        />
  </RelativeLayout>
</LinearLayout>