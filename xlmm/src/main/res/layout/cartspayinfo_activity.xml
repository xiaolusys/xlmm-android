<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
  <android.support.design.widget.AppBarLayout
      android:id="@+id/app_bar_layout"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:theme="@style/AppTheme.AppBarOverlay">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#fdb916"
        app:popupTheme="@style/AppTheme.PopupOverlay">

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_centerInParent="true"
          android:layout_gravity="center"
          android:text="确认订单"
          android:textColor="@android:color/white"
          android:textSize="24sp"
          android:textStyle="bold"/>
    </android.support.v7.widget.Toolbar>

  </android.support.design.widget.AppBarLayout>
  <ScrollView
      app:layout_behavior="@string/appbar_scrolling_view_behavior"
      android:layout_below="@id/app_bar_layout"
      android:layout_width="match_parent"
      android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
      <RelativeLayout
          android:clickable="true"
          android:id="@+id/adress"
          android:padding="8dp"
          android:layout_width="match_parent"
          android:background="@color/white"
          android:layout_height="145px">
        <ImageView android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:id="@+id/image_location"
            android:layout_height="wrap_content"
            android:src="@drawable/location"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/name"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@id/image_location"
            android:text="xiaolumama"
            />

        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/phone"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@id/name"
            android:text="xiaolumama"
            />
        <TextView
            android:id="@+id/address_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@id/image_location"
            android:text="上海杨浦区内环十八街东西瓜区测试地址"
           android:layout_alignParentBottom="true"
            />
        <TextView
            android:visibility="invisible"
            android:id="@+id/choose_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@id/image_location"
            android:text="填写收货地址"
            android:layout_alignBottom="@id/image_location"
            />
        <ImageView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@mipmap/common_icon_right_arrow"
            />
      </RelativeLayout>
      <include layout="@layout/common_gap"/>
      <com.jimei.xiaolumeimei.widget.NestedListView
          android:id="@+id/payinfo_listview"
          android:layout_width="match_parent"
          android:layout_marginTop="16dp"
          android:layout_height="match_parent">

      </com.jimei.xiaolumeimei.widget.NestedListView>
      <include layout="@layout/common_gap"/>
      <LinearLayout
          android:padding="8dp"
          android:background="@color/white"
          android:layout_width="match_parent"
          android:orientation="horizontal"
          android:layout_height="88px">
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="可用优惠券"
            />

      </LinearLayout>
      <include layout="@layout/common_gap"/>
      <RelativeLayout
          android:padding="8dp"
          android:background="@color/white"
          android:layout_width="match_parent"
          android:orientation="horizontal"
          android:layout_height="88px">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="运费"
            />
        <TextView
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            />

      </RelativeLayout>

      <TextView
          android:layout_marginTop="8dp"
          android:layout_gravity="end"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="168.8"
          />
      <include
          layout="@layout/common_gap"/>
      <RelativeLayout
          android:background="@color/white"
          android:padding="8dp"
          android:layout_width="match_parent"
          android:layout_height="88px">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="支付宝"
            />
        <com.jimei.xiaolumeimei.widget.SmoothCheckBox
            android:id="@+id/alipay"
            android:layout_alignParentRight="true"
            android:layout_width="25dp"
            android:layout_height="25dp"
            app:color_checked="@color/colorPrimary"
            />
      </RelativeLayout>
      <include layout="@layout/common_gap"/>
      <RelativeLayout
          android:background="@color/white"
          android:padding="8dp"
          android:layout_width="match_parent"
          android:layout_height="88px">
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="微信"
            />
        <com.jimei.xiaolumeimei.widget.SmoothCheckBox
            android:id="@+id/wx"
            android:layout_alignParentRight="true"
            android:layout_width="25dp"
            android:layout_height="25dp"
            app:color_checked="@color/colorPrimary"
            />
      </RelativeLayout>
      <include layout="@layout/common_gap"/>
    </LinearLayout>


  </ScrollView>
  <!--<android.support.v7.widget.RecyclerView-->
  <!--android:id="@+id/payinfo_recyclerview"-->
  <!--android:layout_width="match_parent"-->
  <!--android:layout_height="match_parent"/>-->

  <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
      xmlns:app="http://schemas.android.com/apk/res-auto"
      android:layout_width="match_parent"
      android:layout_height="250px"
      android:layout_gravity="bottom"
      android:background="#ffffff"
      android:orientation="vertical"
      android:gravity="center"
      app:layout_behavior=".behavior.QuickHideBehavior">
    <include layout="@layout/common_gap"/>
    <LinearLayout android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_height="wrap_content"
        >
      <TextView
          android:textColor="#26262e"
          android:layout_width="wrap_content"
          android:text="应付款金额"
          android:layout_height="wrap_content"
          />
      <TextView
          android:id="@+id/total_price"
          android:textSize="20sp"
          android:textColor="@color/colorPrimary"
          android:layout_width="wrap_content"
          android:text="108.9"
          android:layout_height="wrap_content"
          />

      <TextView
          android:layout_marginLeft="8dp"
          android:id="@+id/jiehsneg"
          android:textSize="20sp"
          android:layout_width="wrap_content"
          android:text="已节省50"
          android:layout_height="wrap_content"
          />
    </LinearLayout>
    <Button
        android:layout_marginBottom="30px"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:text="提交订单"
        android:id="@+id/confirm"

        android:layout_width="660px"
        android:background="@drawable/shape_common"
        android:layout_height="80px"
        />
  </LinearLayout>


