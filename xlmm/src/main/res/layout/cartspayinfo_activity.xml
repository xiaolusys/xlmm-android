<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:text="确认订单"
                android:textColor="@android:color/white"
                android:textSize="16sp" />
        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/app_bar_layout"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/adress"
                android:layout_width="match_parent"
                android:layout_height="145px"
                android:background="@color/white"
                android:clickable="true"
                android:padding="8dp">

                <ImageView
                    android:id="@+id/image_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@drawable/location" />

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_toRightOf="@id/image_location"
                    android:text="" />

                <TextView
                    android:id="@+id/phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_toRightOf="@id/name"
                    android:text="" />

                <TextView
                    android:id="@+id/address_details"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="8dp"
                    android:layout_toRightOf="@id/image_location"
                    android:text="" />

                <TextView
                    android:id="@+id/choose_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/image_location"
                    android:layout_marginLeft="8dp"
                    android:layout_toRightOf="@id/image_location"
                    android:text="填写收货地址"
                    android:visibility="invisible" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/common_icon_right_arrow" />
            </RelativeLayout>

            <include layout="@layout/common_gap" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="16dp"
                android:background="#DADADA" />

            <com.jimei.xiaolumeimei.widget.NestedListView
                android:id="@+id/payinfo_listview"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <include layout="@layout/common_gap" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="16dp"
                android:background="#DADADA" />

            <RelativeLayout
                android:id="@+id/coupon_layout"
                android:layout_width="match_parent"
                android:layout_height="88px"
                android:background="@color/white"
                android:padding="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="可用优惠券"
                    android:textSize="28px" />

                <TextView
                    android:id="@+id/tv_coupon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="8dp"
                    android:layout_toLeftOf="@+id/common_icon_right_arrow"
                    android:textSize="28px" />

                <ImageView
                    android:id="@+id/common_icon_right_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/common_icon_right_arrow"

                    />

            </RelativeLayout>

            <include layout="@layout/common_gap" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="88px"
                android:background="@color/white"
                android:orientation="horizontal"
                android:padding="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="APP支付优惠"
                    android:textSize="28px" />

                <TextView
                    android:id="@+id/tv_app_discount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="-2元"
                    android:textColor="@color/colorAccent"
                    android:textSize="28px" />
            </RelativeLayout>

            <include layout="@layout/common_gap" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="88px"
                android:background="@color/white"
                android:padding="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="运费"
                    android:textSize="28px" />

                <TextView
                    android:id="@+id/post_fee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="0"
                    android:textSize="28px" />

            </RelativeLayout>
            <include layout="@layout/common_gap" />
            <LinearLayout
                android:layout_width="match_parent"
                android:background="@color/white"
                android:layout_height="88px"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="留言:"
                    android:padding="8dp"
                    android:textSize="28px" />

                <EditText
                    android:id="@+id/edit_query"
                    android:textSize="15sp"
                    android:textColorHint="@color/b9"
                    android:hint="选填:快递发韵达,邮政都包邮哦(限30字)"
                    android:layout_marginRight="8dp"
                    android:maxLength="30"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    />

            </LinearLayout>

            <include layout="@layout/common_gap" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="88px"
                android:background="@color/white"
                android:orientation="horizontal"
                android:padding="8dp">

                <TextView
                    android:id="@+id/extra_budget"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text=""
                    android:textSize="28px" />

                <com.jimei.xiaolumeimei.widget.SmoothCheckBox
                    android:id="@+id/scb"
                    android:layout_width="40px"
                    android:layout_height="40px"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="12px"
                    app:color_checked="@color/colorAccent"
                    app:color_unchecked_stroke="@color/colorAccent" />

            </RelativeLayout>

            <include layout="@layout/common_gap" />

            <TextView
                android:id="@+id/total_price_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:padding="8dp"
                android:text=""
                android:textSize="28px" />


            <include layout="@layout/common_gap" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="176px"
                android:background="@color/white"
                android:padding="8dp">

                <ImageView
                    android:id="@+id/alipay_icon"
                    android:layout_width="32px"
                    android:layout_height="32px"
                    android:layout_marginTop="11px"
                    android:src="@drawable/alipay" />

                <TextView
                    android:id="@+id/tv_alipay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15px"
                    android:layout_marginTop="12px"
                    android:layout_toRightOf="@id/alipay_icon"
                    android:text="支付宝"
                    android:textSize="28px" />

                <View
                    android:id="@+id/v1"
                    android:layout_width="match_parent"
                    android:layout_height="1dip"
                    android:layout_marginTop="70px"
                    android:background="@color/greytow" />

                <ImageView
                    android:id="@+id/wx_icon"
                    android:layout_width="32px"
                    android:layout_height="32px"
                    android:layout_below="@id/v1"
                    android:layout_marginTop="26px"
                    android:src="@drawable/wx_icon" />

                <TextView
                    android:id="@+id/tv22"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/v1"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15px"
                    android:layout_marginTop="27px"
                    android:layout_toRightOf="@id/wx_icon"
                    android:text="微信"
                    android:textSize="28px" />

                <View
                    android:id="@+id/v2"
                    android:layout_width="match_parent"
                    android:layout_height="1dip"
                    android:layout_below="@+id/tv22"
                    android:layout_marginTop="30px"
                    android:background="@color/greytow" />

                <RadioGroup
                    android:id="@+id/pay_rg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:orientation="vertical">

                    <android.support.v7.widget.AppCompatRadioButton
                        android:id="@+id/alipay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <android.support.v7.widget.AppCompatRadioButton
                        android:id="@+id/wx"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="40px" />
                </RadioGroup>

                <TextView
                    android:id="@+id/pay_extra"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/pay_rg" />
            </RelativeLayout>

            <include layout="@layout/common_gap" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="250px" />
        </LinearLayout>
    </ScrollView>

    <include layout="@layout/include_cartpayinfo_lin" />

    <RelativeLayout
        android:id="@+id/empty_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#cccccc"
        android:visibility="invisible"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"

        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tv2"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="24dp"
            android:src="@drawable/cart" />

        <TextView
            android:id="@+id/tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tv1"
            android:layout_centerInParent="true"
            android:layout_marginBottom="16dp"
            android:text="您的购物车空空如也~快去装满它吧"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="快去挑选几件喜欢的宝贝吧~" />

        <Button
            android:id="@+id/go_main"
            android:layout_width="650px"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="24dp"
            android:background="@drawable/shape_common"
            android:text="随便逛逛"
            android:textColor="@color/white" />
    </RelativeLayout>
</android.support.design.widget.CoordinatorLayout>