<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llayout_navhead"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:padding="16dp"
    android:background="@drawable/side_nav_bar"
    android:theme="@style/ThemeOverlay.AppCompat.Dark"
    >

  <RelativeLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="30dp"
      android:layout_centerHorizontal="true"
      android:id="@+id/rl_head">

    <com.jimei.xiaolumeimei.widget.CircleImageView
        android:id="@+id/imgUser"
        android:layout_centerHorizontal="true"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:clickable="true"
        android:src="@drawable/img_head"/>

    <TextView
        android:layout_centerHorizontal="true"
        android:layout_below="@id/imgUser"
        android:gravity="center"
        android:id="@+id/tvNickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="小鹿妈妈"
        />
  </RelativeLayout>


  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="20dp"
      android:weightSum="3"
      android:layout_below="@+id/rl_head"
      android:orientation="horizontal">


    <RelativeLayout
        android:gravity="center"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        >
      <TextView
          android:textStyle="bold"
          android:textSize="15sp"
          android:layout_marginLeft="8dp"
          android:id="@+id/tvMoney"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="0"
          />

      <ImageView
          android:layout_below="@id/tvMoney"
          android:id="@+id/imgMoney"
          android:layout_width="wrap_content"
          android:layout_height="24dp"
          android:clickable="true"
          android:src="@drawable/ic_wallet"/>

      <TextView
          android:textSize="11sp"
          android:id="@+id/tvMoney1"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_toRightOf="@+id/imgMoney"
          android:layout_alignBottom="@+id/imgMoney"
          android:gravity="center_vertical"
          android:text="余额(元)"/>


    </RelativeLayout>

    <RelativeLayout
        android:gravity="center"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        >
      <TextView
          android:textStyle="bold"
          android:textSize="15sp"
          android:layout_marginLeft="10dp"
          android:id="@+id/tvScore"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="0"/>

      <ImageView
          android:layout_centerVertical="true"
          android:layout_below="@id/tvScore"
          android:id="@+id/imgPoint"
          android:layout_width="wrap_content"
          android:layout_height="24dp"
          android:clickable="true"
          android:src="@drawable/ic_point"/>

      <TextView
          android:textSize="11sp"
          android:id="@+id/tvPoint1"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_toRightOf="@+id/imgPoint"
          android:layout_alignBottom="@+id/imgPoint"
          android:gravity="center_vertical"
          android:text="积分"/>


    </RelativeLayout>

    <RelativeLayout
        android:gravity="center"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        >

      <TextView
          android:textStyle="bold"
          android:textSize="15sp"
          android:id="@+id/tvDiscount"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="10dp"
          android:text="0"/>
      <ImageView
          android:layout_below="@id/tvDiscount"
          android:layout_height="24dp"
          android:layout_alignParentLeft="true"
          android:id="@+id/imgCoupon"
          android:layout_width="wrap_content"
          android:clickable="true"
          android:src="@drawable/ic_coupon"/>

      <TextView
          android:textSize="11sp"
          android:id="@+id/tvCoupon1"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_toRightOf="@+id/imgCoupon"
          android:layout_alignBottom="@+id/imgCoupon"
          android:gravity="center_vertical"
          android:text="优惠券"/>


    </RelativeLayout>

  </LinearLayout>

</RelativeLayout>
