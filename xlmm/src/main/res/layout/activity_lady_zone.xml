<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.jimei.xiaolumeimei.ui.activity.product.LadyZoneActivity">

    <com.jimei.xiaolumeimei.widget.XlmmTitleView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:xlmm_title="女装专区" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80px"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="gone">

                <LinearLayout
                    android:id="@+id/layout_price"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="价格"
                        android:textColor="@color/text_color_A0"
                        android:textSize="15sp" />

                    <ImageView
                        android:id="@+id/iv_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12px"
                        android:src="@drawable/icon_down_category" />

                </LinearLayout>

                <View
                    android:layout_width="1px"
                    android:layout_height="50px"
                    android:background="@color/bg_grey2" />

                <LinearLayout
                    android:id="@+id/layout_color"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_color"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="颜色"
                        android:textColor="@color/text_color_A0"
                        android:textSize="15sp" />

                    <ImageView
                        android:id="@+id/iv_color"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12px"
                        android:src="@drawable/icon_down_category" />

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/bg_grey2"
                android:visibility="gone" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.jcodecraeer.xrecyclerview.XRecyclerView
                    android:id="@+id/xrv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/bg_grey" />

                <GridView
                    android:id="@+id/gv_price"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/bg_grey"
                    android:columnWidth="230px"
                    android:numColumns="3"
                    android:stretchMode="columnWidth"
                    android:visibility="gone" />

                <GridView
                    android:id="@+id/gv_color"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/bg_grey"
                    android:columnWidth="230px"
                    android:numColumns="3"
                    android:stretchMode="columnWidth"
                    android:visibility="gone" />


            </FrameLayout>
        </LinearLayout>

        <com.jcodecraeer.xrecyclerview.XRecyclerView
            android:id="@+id/xrv_category"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white_bg"
            android:visibility="gone" />

    </FrameLayout>


</LinearLayout>
