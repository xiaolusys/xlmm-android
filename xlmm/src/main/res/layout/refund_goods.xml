<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white_10"
    >


  <include layout="@layout/one_order_item"/>

  <include layout="@layout/common_gap"/>

  <RelativeLayout
      android:layout_width="fill_parent"
      android:layout_height="32dp"
      android:padding="4dp"
      android:orientation="horizontal"
      android:background="@color/white_10"
      >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="申请数量："
        android:textSize="15sp"
        android:layout_marginLeft="16px"
        />

    <TextView
        android:id="@+id/tx_refund_num"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="1"
        android:textSize="15sp"
        android:layout_marginRight="16px"
        />
  </RelativeLayout>

  <include layout="@layout/common_gap"/>

  <RelativeLayout
      android:layout_width="fill_parent"
      android:layout_height="32dp"
      android:padding="4dp"
      android:orientation="horizontal"
      android:background="@color/white_10"
      >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="可退金额："
        android:textSize="15sp"
        android:layout_marginLeft="16px"
        />

    <TextView
        android:id="@+id/tx_refundfee"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="￥0"
        android:textColor="@color/colorAccent"
        android:textSize="15sp"
        android:layout_marginRight="16px"
        />
  </RelativeLayout>

  <include layout="@layout/common_gap"/>

  <RelativeLayout
      android:layout_width="fill_parent"
      android:layout_height="32dp"
      android:padding="4dp"
      android:orientation="horizontal"
      android:background="@color/white_10"
      >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="退款原因"
        android:textSize="15sp"
        android:layout_marginLeft="16px"
        />

    <TextView
        android:id="@+id/tx_refund_reason"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="其他"
        android:textSize="15sp"
        android:layout_marginRight="16px"
        />
  </RelativeLayout>

  <include layout="@layout/common_gap"/>


  <LinearLayout
      android:layout_width="fill_parent"
      android:padding="4dp"
      android:layout_height="64dp"
      android:background="@color/white_10"
      android:orientation="vertical" >

    <TextView
        android:id="@+id/tx_order_crttime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="时间："
        android:textSize="15sp"
        android:layout_marginLeft="16px"
        />

    <TextView
        android:id="@+id/tx_order_crtstate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="申请退款"
        android:textSize="15sp"
        android:layout_marginLeft="16px"
        />

  </LinearLayout>
</LinearLayout>





