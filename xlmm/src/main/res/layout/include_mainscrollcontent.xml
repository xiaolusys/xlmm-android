<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
>
  <com.cpoopc.scrollablelayoutlib.ScrollableLayout
      android:id="@+id/scrollableLayout"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical"
  >
    <RelativeLayout
        android:background="#f3f3f4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
      <FrameLayout
          android:id="@+id/ff"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical">

        <com.jimei.xiaolumeimei.widget.banner.SliderLayout
            android:id="@+id/slider"
            app:auto_cycle="true"
            android:layout_width="match_parent"
            android:layout_height="310px"
        />

        <com.jimei.xiaolumeimei.widget.banner.Indicators.PagerIndicator
            android:id="@+id/pi_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|left"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            app:selected_color="@color/colorPrimary"
            app:selected_height="4dp"
            app:selected_padding_left="4dp"
            app:selected_padding_right="4dp"
            app:selected_width="12dp"
            app:shape="rect"
            app:unselected_color="#fff"
            app:unselected_height="3dp"
            app:unselected_padding_left="4dp"
            app:unselected_padding_right="4dp"
            app:unselected_width="3dp"
        />
      </FrameLayout>
      <LinearLayout
          android:id="@+id/ll"
          android:layout_below="@id/ff"
          android:orientation="horizontal"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">
        <ImageView
            android:layout_gravity="left"
            android:src="@drawable/ic_companylogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:layout_gravity="right"
            android:src="@drawable/ic_companylogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
      </LinearLayout>
      <LinearLayout
          android:layout_below="@id/ll"
          android:id="@+id/post_activity"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical"/>

      <RelativeLayout
          android:id="@+id/rr"
          android:layout_below="@id/post_activity"
          android:layout_width="match_parent"
          android:layout_height="50dp"
          android:layout_marginTop="10dp"
          android:background="@color/white">

        <TextView
            android:id="@+id/nvzhuangText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="12dp"
            android:text="@string/today_new"
            android:textColor="#615f5f"
            android:textSize="18dp"/>

        <cn.iwgang.countdownview.CountdownView
            android:layout_marginTop="6dp"
            android:id="@+id/countTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/nvzhuangText"
            app:isShowDay="true"
            app:isShowHour="true"
            app:isShowMinute="true"
            app:isShowSecond="true"
            app:timeTextColor="@color/colorAccent"
            app:timeTextSize="22sp"
            app:suffixGravity="bottom"
            app:suffixTextColor="@color/colorAccent"
            app:suffixTextSize="12sp"
            app:suffixDay="天"
            app:suffixHour="时"
            app:suffixMinute="分"
            app:suffixSecond="秒"
        />
      </RelativeLayout>

    </RelativeLayout>

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/white"
        android:orientation="horizontal">
      <RadioButton
          android:id="@+id/rb_yesterday"
          android:checked="true"
          android:drawableTop="@drawable/yesterday"
          style="@style/main_radio"/>

      <RadioButton
          android:id="@+id/rb_today"
          android:drawableTop="@drawable/today"
          style="@style/main_radio"/>

      <RadioButton
          android:id="@+id/rb_tomorror"
          android:drawableTop="@drawable/tomorror"
          style="@style/main_radio"/>

    </RadioGroup>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
    />
  </com.cpoopc.scrollablelayoutlib.ScrollableLayout>
</RelativeLayout>