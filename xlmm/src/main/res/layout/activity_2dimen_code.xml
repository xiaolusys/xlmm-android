<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/AppTheme.AppBarOverlay">

  <com.jimei.xiaolumeimei.widget.XlmmTitleView
      app:xlmm_title="我的二维码"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"/>

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_below="@+id/app_bar_layout"
      android:layout_centerHorizontal="true"
      android:id="@+id/rl_mamainfo">

    <ImageView
        android:id="@+id/img_2dimen"
        android:layout_width="500px"
        android:layout_height="500px"
        android:layout_marginLeft="100px"
        android:layout_marginTop="40px"
        />

    <Button
        android:id="@+id/btn_share"
        android:layout_width="660px"
        android:layout_height="wrap_content"
        android:text="马上分享"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:background="@drawable/shape_common"
        android:layout_below="@id/img_2dimen"
        android:layout_gravity="center"
        android:layout_marginTop="20px"
        android:layout_marginLeft="30px"
        />
  </RelativeLayout>


</RelativeLayout>