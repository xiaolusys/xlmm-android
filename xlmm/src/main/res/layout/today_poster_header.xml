<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/head_today"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.jimei.xiaolumeimei.widget.banner.SliderLayout
            android:id="@+id/slider"
            app:auto_cycle="true"
            android:layout_width="match_parent"
            android:layout_height="309px"
            />

        <com.jimei.xiaolumeimei.widget.banner.Indicators.PagerIndicator
            android:id="@+id/pi_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:layout_margin="5dp"
            android:gravity="center"
            app:selected_color="@color/colorPrimary"
            app:selected_height="6dp"
            app:selected_padding_left="3dp"
            app:selected_padding_right="3dp"
            app:selected_width="6dp"
            app:shape="oval"
            app:unselected_color="#fff"
            app:unselected_height="4dp"
            app:unselected_padding_left="3dp"
            app:unselected_padding_right="3dp"
            app:unselected_width="4dp"
            />
    </FrameLayout>

  <ImageView
      android:id="@+id/post_2"
      android:layout_width="match_parent"
      android:layout_height="309px"
      android:layout_marginTop="15px"
      />

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="50dp"
      android:layout_marginTop="10dp"
      android:background="@color/colorHorizontal">

    <TextView
        android:id="@+id/nvzhuangText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="12dp"
        android:text="@string/today_new"
        android:textColor="@color/white"
        android:textSize="20dp"/>

    <cn.iwgang.countdownview.CountdownView
        android:layout_marginTop="6dp"
        android:id="@+id/countTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/nvzhuangText"
        app:isShowDay="true"
        app:isShowHour="true"
        app:isShowMinute="true"
        app:isShowSecond="true"
        app:timeTextColor="@color/colorAccent"
        app:timeTextSize="22sp"
        app:suffixGravity="bottom"
        app:suffixTextColor="@color/colorAccent"
        app:suffixTextSize="12sp"
        app:suffixDay="天"
        app:suffixHour="时"
        app:suffixMinute="分"
        app:suffixSecond="秒"
        />
  </RelativeLayout>
</LinearLayout>