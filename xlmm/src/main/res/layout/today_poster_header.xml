<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/head_today"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
  <FrameLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical">

    <com.jimei.xiaolumeimei.widget.banner.SliderLayout
        android:id="@+id/slider"
        app:auto_cycle="true"
        android:layout_width="match_parent"
        android:layout_height="310px"
    />

    <com.jimei.xiaolumeimei.widget.banner.Indicators.PagerIndicator
        android:id="@+id/pi_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        app:selected_color="@color/colorPrimary"
        app:selected_height="8dp"
        app:selected_padding_left="4dp"
        app:selected_padding_right="4dp"
        app:selected_width="8dp"
        app:shape="oval"
        app:unselected_color="#fff"
        app:unselected_height="6dp"
        app:unselected_padding_left="4dp"
        app:unselected_padding_right="4dp"
        app:unselected_width="6dp"
    />
  </FrameLayout>

  <ImageView
      android:adjustViewBounds="true"
      android:id="@+id/post_2"
      android:scaleType="centerCrop"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="8dp"
  />

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="50dp"
      android:layout_marginTop="10dp"
      android:background="@color/white">

    <TextView
        android:id="@+id/nvzhuangText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="12dp"
        android:text="@string/today_new"
        android:textColor="#615f5f"
        android:textSize="18dp"/>

    <cn.iwgang.countdownview.CountdownView
        android:layout_marginTop="6dp"
        android:id="@+id/countTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/nvzhuangText"
        app:isShowDay="true"
        app:isShowHour="true"
        app:isShowMinute="true"
        app:isShowSecond="true"
        app:timeTextColor="@color/colorAccent"
        app:timeTextSize="22sp"
        app:suffixGravity="bottom"
        app:suffixTextColor="@color/colorAccent"
        app:suffixTextSize="12sp"
        app:suffixDay="天"
        app:suffixHour="时"
        app:suffixMinute="分"
        app:suffixSecond="秒"
    />
  </RelativeLayout>
</LinearLayout>