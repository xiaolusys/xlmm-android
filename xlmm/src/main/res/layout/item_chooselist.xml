<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20px">

    <RelativeLayout
        android:id="@+id/img_layout"
        android:background="@drawable/choose_img_bg"
        android:gravity="center"
        android:layout_width="192px"
        android:layout_height="192px">
        <com.jimei.xiaolumeimei.widget.RoundCornerImageView
            android:id="@+id/image_chooselist"
            android:scaleType="fitXY"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </RelativeLayout>


    <TextView
        android:id="@+id/name"
        android:layout_width="300px"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18px"
        android:layout_marginTop="18px"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_toRightOf="@id/img_layout"
        android:text="韩版大摆加厚卫衣"
        android:textColor="@color/c26262E"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/agent_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/name"
        android:layout_marginLeft="18px"
        android:layout_marginTop="18px"
        android:layout_toRightOf="@id/img_layout"
        android:text="¥49"
        android:textColor="@color/c26262E"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/std_sale_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/agent_price"
        android:layout_toRightOf="@id/agent_price"
        android:text="/¥249"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/rebet_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/img_layout"
        android:layout_marginBottom="18px"
        android:layout_marginLeft="18px"
        android:layout_marginTop="18px"
        android:layout_toRightOf="@id/img_layout"
        android:text="返佣"
        android:textColor="@color/colorAccent"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/lock_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/img_layout"
        android:layout_marginBottom="18px"
        android:layout_marginLeft="42px"
        android:layout_marginTop="18px"
        android:layout_toRightOf="@id/rebet_amount"
        android:text="销量"
        android:textColor="@color/colorAccent"
        android:textSize="13sp" />

    <LinearLayout
        android:id="@+id/add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="23px"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/add1"
            android:layout_width="73px"
            android:layout_height="73px"
            android:src="@drawable/ic_havechoose"
            android:textColor="@color/colorPrimary" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/add1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="11px"
            android:text="加入精选"
            android:textSize="19px" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/remove"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="23px"
        android:clickable="false"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="invisible">

        <ImageView
            android:id="@+id/remove1"
            android:layout_width="73px"
            android:layout_height="73px"
            android:src="@drawable/ic_choosed"
            android:textColor="@color/colorPrimary" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/remove1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:text="已加入"
            android:textSize="19px" />
    </LinearLayout>

</RelativeLayout>