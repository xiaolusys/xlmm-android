<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="4dp">

    <ImageView
        android:id="@+id/image_chooselist"
        android:layout_width="190px"
        android:layout_height="190px" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@id/image_chooselist" />

    <TextView
        android:id="@+id/agent_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/name"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        android:layout_toRightOf="@id/image_chooselist"
        android:textColor="@color/colorPrimary" />

    <TextView
        android:id="@+id/std_sale_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/name"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@id/agent_price"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/rebet_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/image_chooselist"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@id/image_chooselist"
        android:textColor="@color/colorAccent" />

    <TextView
        android:id="@+id/lock_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/image_chooselist"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@id/rebet_amount"
        android:textColor="@color/colorAccent" />

    <LinearLayout
        android:orientation="vertical"
        android:gravity="center"
        android:id="@+id/add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true">

        <ImageView
            android:src="@drawable/ic_havechoose"
            android:id="@+id/add1"
            android:layout_width="73px"
            android:layout_height="73px"
            android:textColor="@color/colorPrimary" />

        <TextView
            android:layout_marginTop="8dp"
            android:textSize="19px"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/add1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="加入精选"
            />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:visibility="invisible"
        android:clickable="false"
        android:id="@+id/remove"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true">

        <ImageView
            android:src="@drawable/ic_choosed"
            android:id="@+id/remove1"
            android:layout_width="73px"
            android:layout_height="73px"
            android:textColor="@color/colorPrimary" />

        <TextView
            android:layout_marginTop="8dp"
            android:textSize="19px"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/remove1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已加入"
            />
    </LinearLayout>

