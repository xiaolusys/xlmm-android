<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20px">

    <RelativeLayout
        android:id="@+id/img_layout"
        android:layout_width="192px"
        android:layout_height="192px"
        android:background="@drawable/choose_img_bg"
        android:gravity="center">

        <com.jimei.xiaolumeimei.widget.RoundCornerImageView
            android:id="@+id/image_chooselist"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="360px"
        android:layout_height="192px"
        android:layout_toRightOf="@id/img_layout"
        android:orientation="vertical"
        android:paddingLeft="18px">

        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:singleLine="true"
            android:gravity="center_vertical"
            android:text="韩版大摆加厚卫衣"
            android:textColor="@color/c26262E"
            android:textSize="15sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/agent_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¥49"
                android:layout_centerVertical="true"
                android:textColor="@color/c26262E"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/std_sale_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/agent_price"
                android:layout_alignBaseline="@id/agent_price"
                android:gravity="bottom"
                android:text="/¥249"
                android:textSize="13sp" />

        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/rebet_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="返佣"
                android:textColor="@color/colorAccent"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/lock_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18px"
                android:text="销量"
                android:singleLine="true"
                android:ellipsize="end"
                android:textColor="@color/colorAccent"
                android:textSize="12sp" />
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="23px"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/add1"
            android:layout_width="73px"
            android:layout_height="73px"
            android:src="@drawable/ic_havechoose"
            android:textColor="@color/colorPrimary" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/add1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="11px"
            android:text="加入精选"
            android:textSize="19px" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/remove"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="23px"
        android:clickable="false"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="invisible">

        <ImageView
            android:id="@+id/remove1"
            android:layout_width="73px"
            android:layout_height="73px"
            android:src="@drawable/ic_choosed"
            android:textColor="@color/colorPrimary" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/remove1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:text="已加入"
            android:textSize="19px" />
    </LinearLayout>

</RelativeLayout>