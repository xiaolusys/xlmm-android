<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.jimei.xiaolumeimei.widget.XlmmTitleView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:xlmm_title="登录" />

    <include layout="@layout/common_gap" />

    <com.jimei.xiaolumeimei.widget.ClearEditText
        android:id="@+id/set_login_name"
        style="@style/EditTextStyle"
        android:layout_width="match_parent"
        android:background="@null"
        android:hint="请输入手机号"
        android:inputType="phone"
        android:maxLength="11"
        app:iconClear="@drawable/clear_text" />

    <include layout="@layout/common_gap" />

    <com.jimei.xiaolumeimei.widget.PasswordEditText
        android:id="@+id/set_login_password"
        style="@style/EditTextStyle"
        android:layout_width="match_parent"
        android:background="@null"
        android:hint="请输入登录密码"
        android:inputType="textPassword"
        android:maxLength="18" />

    <include layout="@layout/common_gap" />

    <TextView
        android:id="@+id/forgetTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|center_vertical"
        android:layout_marginRight="8dp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="忘记密码"
        android:textColor="@color/book_loading_book"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30px"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="20sp">

        <Button
            android:id="@+id/set_login_button"
            android:layout_width="656px"
            android:layout_height="90px"
            android:background="@drawable/shape_common"
            android:clickable="true"
            android:text="登录"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/set_register_button"
            android:layout_width="656px"
            android:layout_height="90px"
            android:layout_marginTop="16dp"
            android:background="@drawable/shape_res"
            android:clickable="true"
            android:text="注册"
            android:textColor="@color/colorPrimary" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="150px"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="@color/c8c8c8" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="8px"
            android:layout_marginRight="8px"
            android:text="第三方登录"
            android:textSize="12sp" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="@color/c8c8c8" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="52px"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/wx_login"
            android:layout_width="78px"
            android:layout_height="78px"
            android:layout_marginLeft="200px"
            android:src="@drawable/weichat" />

        <ImageView
            android:id="@+id/sms_login"
            android:layout_width="78px"
            android:layout_height="78px"
            android:layout_marginLeft="180px"
            android:src="@drawable/sms" />
    </LinearLayout>


</LinearLayout>