<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

  <com.jimei.library.widget.XlmmTitleView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      app:xlmm_title="修改昵称"/>

  <include layout="@layout/common_gap" />

  <EditText
      android:id="@+id/set_nick_name"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:singleLine="true"
      android:paddingLeft="10sp"
      android:paddingRight="10sp"
      android:paddingTop="10sp"
      android:paddingBottom="10sp"
      android:background="@drawable/text_frame"
      android:hint="请输入新昵称"/>


  <include layout="@layout/common_gap" />

  <TextView
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:singleLine="true"
      android:paddingLeft="10sp"
      android:paddingRight="10sp"
      android:paddingTop="10sp"
      android:paddingBottom="10sp"
      android:background="@drawable/text_frame"
      android:text="4-20个字符，可由中英文、数字、“-”组成"/>

  <include layout="@layout/common_gap" />

  <Button

      android:layout_marginTop="8dp"
      android:background="@drawable/btn_common_default"
      android:id="@+id/set_save_button"
      android:layout_width="669px"
      android:layout_height="wrap_content"
      android:text="保存"
      android:textColor="@color/white"
      android:textSize="16sp"
      android:gravity="center"
      android:layout_gravity="center" />

</LinearLayout>