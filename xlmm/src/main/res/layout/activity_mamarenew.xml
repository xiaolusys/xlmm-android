<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >

  <ScrollView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        >

      <com.jimei.xiaolumeimei.widget.XlmmTitleView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          app:xlmm_title="小鹿妈妈身份续费"
          />

      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:background="@color/white"
          >

        <ImageView
            android:id="@+id/image_99"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="60px"
            android:layout_marginTop="100px"
            android:src="@drawable/ninenine_choose"
            />

        <ImageView
            android:id="@+id/image_991"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="60px"
            android:layout_marginTop="100px"
            android:src="@drawable/ninenine_normal"
            android:visibility="invisible"
            />

        <ImageView
            android:id="@+id/image_188"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="60px"
            android:layout_marginTop="100px"
            android:src="@drawable/yibaba_choose"
            android:visibility="invisible"
            />

        <ImageView
            android:id="@+id/image_1881"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="60px"
            android:layout_marginTop="100px"
            android:src="@drawable/yibaba_normal"
            />
      </RelativeLayout>

      <View
          android:layout_width="match_parent"
          android:layout_height="1px"
          android:layout_marginTop="50px"
          android:background="#33DADADA"
          />

      <ImageView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:scaleType="centerCrop"
          android:src="@drawable/mamapay_rule"
          />

      <View
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:background="@color/bg_grey"
          />
    </LinearLayout>
  </ScrollView>

  <RelativeLayout
      android:id="@+id/confirm"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_alignParentBottom="true"
      android:background="@color/white"
      android:padding="12dp"
      >
    <TextView
        android:id="@+id/tv_moren"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="默认使用小鹿妈妈钱包金额抵扣"
        android:textSize="24px"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_moren"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10px"
        android:src="@drawable/mamapay"
        />
  </RelativeLayout>
</RelativeLayout>