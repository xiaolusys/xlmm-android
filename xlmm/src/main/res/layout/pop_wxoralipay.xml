<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="wrap_content">
  <LinearLayout
      android:id="@+id/ll"
      android:layout_width="match_parent"
      android:layout_height="70px"
      android:layout_marginTop="19px"
      android:gravity="center"
      android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="应付款金额"
        android:textColor="#26262e"
        android:textSize="30px"/>

    <TextView
        android:id="@+id/total_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2px"
        android:text=""
        android:textColor="@color/colorPrimary"
        android:textSize="30px"/>

  </LinearLayout>
  <include layout="@layout/common_gap"/>
  <LinearLayout
      android:layout_below="@id/ll"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@color/white"
      android:orientation="vertical">


    <LinearLayout
        android:id="@+id/alipay_layout"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:gravity="center_vertical"
        android:orientation="horizontal">

      <ImageView
          android:id="@+id/alipay_icon"
          android:layout_width="32px"
          android:layout_height="32px"
          android:layout_marginLeft="12dp"
          android:src="@drawable/alipay"/>

      <TextView
          android:textColor="@color/black"
          android:id="@+id/tv_alipay"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="12dp"
          android:text="支付宝"
          android:textSize="28px"/>

      <View
          android:layout_width="0dp"
          android:layout_height="1dp"
          android:layout_weight="1"/>

      <!--<ImageView-->
      <!--android:id="@+id/iv_alipay"-->
      <!--android:layout_width="wrap_content"-->
      <!--android:layout_height="wrap_content"-->
      <!--android:layout_marginRight="15dp"-->
      <!--android:src="@drawable/radio_bg_checked"/>-->
    </LinearLayout>


    <include layout="@layout/common_gap"/>

    <LinearLayout
        android:id="@+id/wx_layout"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:gravity="center_vertical"
        android:orientation="horizontal">

      <ImageView
          android:id="@+id/wx_icon"
          android:layout_width="32px"
          android:layout_height="32px"
          android:layout_marginLeft="12dp"
          android:src="@drawable/wx_icon"/>

      <TextView
          android:textColor="@color/black"
          android:id="@+id/tv22"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="12dp"
          android:text="微信"
          android:textSize="28px"/>

      <View
          android:layout_width="0dp"
          android:layout_height="1dp"
          android:layout_weight="1"/>

      <!--<ImageView-->
      <!--android:id="@+id/iv_wx"-->
      <!--android:layout_width="wrap_content"-->
      <!--android:layout_height="wrap_content"-->
      <!--android:layout_marginRight="15dp"-->
      <!--android:src="@drawable/radio_bg"/>-->

    </LinearLayout>

  </LinearLayout>

</RelativeLayout>