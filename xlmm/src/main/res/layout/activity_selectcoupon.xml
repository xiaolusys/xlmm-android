<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/llayout_coupon"
    style="@style/AppTheme.AppBarOverlay"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <com.jimei.xiaolumeimei.widget.XlmmTitleView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:xlmm_title="优惠券" />

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#F3F3F4">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <include layout="@layout/frame_coupon" />

        </RelativeLayout>

        <include layout="@layout/orders_emptyinfo" />
    </FrameLayout>

    <include layout="@layout/common_gap" />

    <Button
        android:id="@+id/btn_cancel_coupon"
        android:layout_width="690px"
        android:layout_height="80px"
        android:layout_marginBottom="20px"
        android:layout_marginTop="20px"
        android:background="@color/colorAccent"
        android:text="不使用优惠券"
        android:textColor="@color/white"
        android:textSize="15sp" />
</LinearLayout>