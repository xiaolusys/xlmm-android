<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >


  <com.jimei.xiaolumeimei.widget.NestedListView
      android:id="@+id/goods_listview"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:gravity="center"
      />

  <include layout="@layout/common_gap"/>

  <RelativeLayout
      android:layout_width="fill_parent"
      android:layout_height="32dp"
      android:layout_weight="1"
      android:orientation="horizontal"
      >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="申请数量："
        android:textSize="15sp"
        />

    <TextView
        android:id="@+id/tx_order_postfee"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="1"
        android:textSize="15sp"
        />
  </RelativeLayout>

  <include layout="@layout/common_gap"/>

  <RelativeLayout
      android:layout_width="fill_parent"
      android:layout_height="32dp"
      android:layout_weight="1"
      android:orientation="horizontal"
      >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="可退金额："
        android:textSize="15sp"
        />

    <TextView
        android:id="@+id/tx_order_totalfee"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="￥120"
        android:textSize="15sp"
        />
  </RelativeLayout>

  <RelativeLayout
      android:layout_width="fill_parent"
      android:layout_height="32dp"
      android:layout_weight="1"
      android:orientation="horizontal"
      >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="退款原因"
        android:textSize="15sp"
        />

    <TextView
        android:id="@+id/tx_refund_reason"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="七天无理由退货"
        android:textSize="15sp"
        />
  </RelativeLayout>

  <include layout="@layout/common_gap"/>

  <include layout = "@layout/hscrollview_gallery" />

  <LinearLayout
      android:layout_width="fill_parent"
      android:layout_weight="1"
      android:layout_height="64dp"
      android:orientation="vertical" >

    <TextView
        android:id="@+id/tx_order_crttime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="时间：2016年1月6日"
        android:textSize="15sp"
        />

    <TextView
        android:id="@+id/tx_order_crtstate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="申请退款"
        android:textSize="15sp"
        />

  </LinearLayout>
</LinearLayout>





