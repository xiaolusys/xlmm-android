<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
  <com.jimei.xiaolumeimei.widget.XlmmTitleView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      app:xlmm_title="修改地址"/>
  <LinearLayout
      android:background="@color/white"
      android:layout_marginTop="16dp"
      android:layout_width="match_parent"
      android:layout_height="90px"
      android:orientation="horizontal"
      android:weightSum="3"
      >
    <TextView
        android:layout_margin="4dp"
        android:layout_weight="1"
        android:padding="8dp"
        android:textSize="14sp"
        android:text="收货人"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        />
    <EditText
        android:background="@null"
        android:textSize="14sp"
        android:id="@+id/name"
        android:hint="请输入收货人姓名"
        android:layout_weight="2"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"/>

  </LinearLayout>
  <include layout="@layout/common_gap"/>
  <LinearLayout

      android:background="@color/white"
      android:layout_width="match_parent"
      android:layout_height="90px"
      android:orientation="horizontal"
      android:weightSum="3"
      >
    <TextView
        android:layout_margin="4dp"
        android:layout_weight="1"
        android:padding="8dp"
        android:textSize="14sp"
        android:text="手机号"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        />
    <EditText
        android:layout_marginLeft="8dp"
        android:textSize="14sp"
        android:background="@null"
        android:id="@+id/mobile"
        android:hint="请输入收货人手机号"
        android:layout_weight="2"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"/>

  </LinearLayout>
  <include layout="@layout/common_gap"/>
  <RelativeLayout
      android:layout_marginTop="16dp"
      android:background="@color/white"
      android:layout_width="match_parent"
      android:layout_height="90px"
      >
    <TextView
        android:id="@+id/tv_1"
        android:padding="8dp"
        android:textSize="14sp"
        android:text="所在地区"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <TextView
        android:text="请选择收货人地址"
        android:padding="8dp"
        android:layout_marginLeft="13dp"
        android:layout_toRightOf="@id/tv_1"
        android:textSize="14sp"
        android:id="@+id/address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

  </RelativeLayout>
  <LinearLayout

      android:background="@color/white"
      android:layout_width="match_parent"
      android:layout_height="90px"
      android:orientation="horizontal"
      android:weightSum="3"
      >
    <TextView
        android:padding="4dp"
        android:layout_weight="1"
        android:layout_margin="4dp"
        android:textSize="14sp"
        android:text="详细地址"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        />
    <EditText
        android:paddingTop="8dp"
        android:textSize="14sp"
        android:background="@null"
        android:id="@+id/clear_address"
        android:hint="请输入详细地址"
        android:layout_weight="2"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"/>

  </LinearLayout>
  <RelativeLayout
      android:layout_marginTop="16dp"
      android:layout_width="match_parent"
      android:layout_height="90px"
      android:orientation="horizontal"
      >
    <TextView
        android:layout_margin="4dp"
        android:padding="8dp"
        android:textSize="14sp"
        android:text="是否设为常用地址"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <android.support.v7.widget.SwitchCompat
        android:id="@+id/switch_button"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

  </RelativeLayout>

  <RelativeLayout android:layout_width="match_parent"
      android:layout_height="wrap_content">
    <Button
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:layout_marginTop="40dp"
        android:background="@drawable/shape_common"
        android:id="@+id/save"
        android:text="修改地址"
        android:layout_width="660px"
        android:layout_height="wrap_content"
        />

    <Button
        android:layout_below="@id/save"
        android:layout_centerHorizontal="true"
        android:textColor="@color/colorPrimary"
        android:layout_marginTop="12dp"
        android:background="@drawable/shape_chooselist"
        android:id="@+id/delete"
        android:text="删除地址"
        android:layout_width="660px"
        android:layout_height="wrap_content"
        />

  </RelativeLayout>


</LinearLayout>