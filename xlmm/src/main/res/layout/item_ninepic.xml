<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20px"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/head_iv"
            android:layout_width="81px"
            android:layout_height="81px"
            android:layout_marginLeft="10px"
            android:layout_marginRight="12px"
            android:background="@color/colorPrimary"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="103px"
            android:orientation="vertical">

            <TextView
                android:id="@+id/time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="分享了一个连接"
                android:textColor="@color/colorPrimary"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/contentTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:textColor="@color/black_overlay"
                android:textSize="14sp" />
            <!-- 不同的地方 -->
            <ViewStub
                android:id="@+id/imageviewstub"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/save"
        android:layout_width="300px"
        android:layout_height="48px"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="26px"
        android:layout_marginTop="6px"
        android:background="@drawable/shape_chooselist"
        android:text="保存图片"
        android:textColor="@color/colorPrimary" />
</LinearLayout>