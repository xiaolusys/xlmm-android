<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    >
  <data>
    <!-- 定义变量 -->
    <!--<variable-->
    <!--name=""-->
    <!--type=""-->
    <!--/>-->
  </data>
  <RelativeLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:background="@drawable/mama_renwu"
      >
    <ImageView
        android:id="@+id/mama_renwudesc"
        android:layout_width="330px"
        android:layout_height="200px"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="180px"
        android:src="@drawable/mama_renwudesc"
        />
    <LinearLayout
        android:id="@+id/renwu_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/mama_renwudesc"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        />
    <ImageView
        android:id="@+id/confirm"
        android:layout_width="165px"
        android:layout_height="61px"
        android:layout_below="@id/renwu_list"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:src="@drawable/mama_confirm"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/confirm"
        android:layout_centerHorizontal="true"
        android:text="首单奖励5元 完成新手任务 再奖5元"
        android:textSize="20px"
        />
  </RelativeLayout>
</layout>  