<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sv_frame_coupon"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/llayout_frame_coupon"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_grey"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_unused"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:padding="8dp"
                android:paddingTop="@dimen/nav_header_vertical_spacing"
                android:text="可使用优惠券" />

            <com.jimei.xiaolumeimei.widget.NestedListView
                android:id="@+id/lv_unused_coupon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="@null"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_used"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:padding="8dp"
                android:paddingTop="@dimen/nav_header_vertical_spacing"
                android:text="不可用优惠券" />

            <com.jimei.xiaolumeimei.widget.NestedListView
                android:id="@+id/lv_used_coupon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="@null" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_past"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:padding="8dp"
                android:paddingTop="@dimen/nav_header_vertical_spacing"
                android:text="已过期优惠券" />

            <com.jimei.xiaolumeimei.widget.NestedListView
                android:id="@+id/lv_timeout_coupon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="@null" />

        </LinearLayout>

    </LinearLayout>
</ScrollView>