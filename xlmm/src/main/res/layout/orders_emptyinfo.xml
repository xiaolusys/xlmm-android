<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
	android:id="@+id/rlayout_order_empty">


	<ImageView
		android:layout_width="190px"
		android:layout_height="182px"
		android:layout_marginLeft="265px"
		android:layout_marginTop="250px"
		android:src="@drawable/ic_emptyinfo"
        android:id="@+id/imageView2"
		 />
		
	<TextView		
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="亲，您暂时还没有待支付订单哦~快去看看吧！"
		android:textSize="12sp"
        android:layout_gravity="center"
        android:gravity="center"
        android:id="@+id/tx_info"
        android:foregroundGravity="center"
        android:layout_below="@+id/imageView2"
		android:layout_marginTop="30px"
        android:layout_centerHorizontal="true" />

	<TextView
		
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="再不抢购，就卖光啦~~"
		android:textSize="12sp"
        android:layout_gravity="center"
        android:gravity="center"
        android:id="@+id/tx2"
        android:layout_below="@+id/tx_info"
        android:layout_centerHorizontal="true" />
	
	<Button
		android:layout_width="200px"
		android:layout_height="60px"
		android:text="快去抢购"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="15px"
        android:layout_below="@+id/tx2"
        android:layout_centerHorizontal="true"
        android:background="@drawable/forget_pass"
        android:textColor="@color/colorAccent"
        android:id="@+id/btn_jump"/>


</RelativeLayout>