<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
  <LinearLayout android:layout_width="match_parent"
      android:orientation="vertical"
      android:layout_height="match_parent">
    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

      <android.support.v7.widget.Toolbar
          android:id="@+id/tool_bar"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:background="?attr/colorPrimary"
          app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
          app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
          app:layout_scrollFlags="scroll|enterAlways">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:text="小鹿美美"
            android:textColor="@android:color/white"
            android:textSize="20sp"/>

        <ImageView
            android:id="@+id/img_mmentry"
            android:src="@drawable/ic_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="12dp"
            android:visibility="invisible"
        />

      </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>

    <com.cpoopc.scrollablelayoutlib.ScrollableLayout
        android:id="@+id/scrollableLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
      >
      <LinearLayout
          android:orientation="vertical"
          android:background="#f3f3f4"
          android:layout_width="match_parent"
          android:layout_height="match_parent">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

          <com.jimei.xiaolumeimei.widget.banner.SliderLayout
              android:id="@+id/slider"
              app:auto_cycle="true"
              android:layout_width="match_parent"
              android:layout_height="310px"
          />

          <com.jimei.xiaolumeimei.widget.banner.Indicators.PagerIndicator
              android:id="@+id/pi_header"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="bottom|left"
              android:layout_marginLeft="5dp"
              android:layout_marginRight="5dp"
              android:layout_marginTop="5dp"
              android:layout_marginBottom="10dp"
              android:gravity="center"
              app:selected_color="@color/colorPrimary"
              app:selected_height="4dp"
              app:selected_padding_left="4dp"
              app:selected_padding_right="4dp"
              app:selected_width="12dp"
              app:shape="rect"
              app:unselected_color="#fff"
              app:unselected_height="3dp"
              app:unselected_padding_left="4dp"
              app:unselected_padding_right="4dp"
              app:unselected_width="3dp"
          />
        </FrameLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
          <ImageView
              android:layout_gravity="left"
              android:src="@drawable/ic_companylogo"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"/>
          <ImageView
              android:layout_gravity="right"
              android:src="@drawable/ic_companylogo"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/post_activity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@color/white">

          <TextView
              android:id="@+id/nvzhuangText"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginLeft="14dp"
              android:layout_marginTop="12dp"
              android:text="@string/today_new"
              android:textColor="#615f5f"
              android:textSize="18dp"/>

          <cn.iwgang.countdownview.CountdownView
              android:layout_marginTop="6dp"
              android:id="@+id/countTime"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignParentRight="true"
              android:layout_alignTop="@+id/nvzhuangText"
              app:isShowDay="true"
              app:isShowHour="true"
              app:isShowMinute="true"
              app:isShowSecond="true"
              app:timeTextColor="@color/colorAccent"
              app:timeTextSize="22sp"
              app:suffixGravity="bottom"
              app:suffixTextColor="@color/colorAccent"
              app:suffixTextSize="12sp"
              app:suffixDay="天"
              app:suffixHour="时"
              app:suffixMinute="分"
              app:suffixSecond="秒"
          />
        </RelativeLayout>

      </LinearLayout>
      <RadioGroup
          android:id="@+id/radioGroup"
          android:layout_width="match_parent"
          android:layout_height="55dp"
          android:layout_alignParentBottom="true"
          android:background="@color/white"
          android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rb_chat"
            android:checked="true"
            android:drawableTop="@drawable/yesterday"
            style="@style/main_radio"/>

        <RadioButton
            android:id="@+id/rb_contacts"
            android:drawableTop="@drawable/rb_contacts_selector"
            style="@style/main_radio"/>

        <RadioButton
            android:id="@+id/rb_discovery"
            android:drawableTop="@drawable/rb_discovery_selector"
            style="@style/main_radio"/>

        <RadioButton
            android:id="@+id/rb_me"
            android:drawableTop="@drawable/rb_me_selector"
            style="@style/main_radio"/>
      </RadioGroup>

      <android.support.v4.view.ViewPager
          android:id="@+id/viewPager"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_above="@id/radioGroup" />

    </com.cpoopc.scrollablelayoutlib.ScrollableLayout>

  </LinearLayout>


  <!--<android.support.design.widget.TabLayout-->
  <!--android:id="@+id/tab_layout"-->
  <!--android:layout_width="match_parent"-->
  <!--android:layout_height="wrap_content"-->
  <!--android:background="#FFFFFF"-->
  <!--app:tabSelectedTextColor="@color/colorAccent"-->
  <!--app:tabTextColor="@color/black_overlay"-->
  <!--app:tabIndicatorColor="@color/colorAccent"-->
  <!--app:tabMode="scrollable"/>-->

  <!--</android.support.design.widget.AppBarLayout>-->

  <!--<android.support.v4.view.ViewPager-->
  <!--android:id="@+id/view_pager"-->
  <!--android:layout_width="match_parent"-->
  <!--android:layout_height="match_parent"-->
  <!--app:layout_behavior="@string/appbar_scrolling_view_behavior"/>-->

  <RelativeLayout
      android:layout_margin="8dp"
      android:layout_gravity="bottom|start"
      android:id="@+id/rv_cart"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:background="@drawable/shape_maincarts"
  >

    <ImageView
        android:visibility="invisible"
        android:layout_centerInParent="true"
        android:id="@+id/image_1"
        android:src="@drawable/cart2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
    />

    <ImageView
        android:layout_marginLeft="10dp"
        android:layout_centerVertical="true"
        android:id="@+id/image_2"
        android:src="@drawable/cart2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
    />
  </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>