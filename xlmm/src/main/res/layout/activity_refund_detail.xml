<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/AppTheme.AppBarOverlay"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context="com.jimei.xiaolumeimei.ui.activity.trade.RefundDetailActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#fdb916"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_weight="1"
            android:layout_height="32dp"
            android:orientation="horizontal" >
            <TextView
                android:id="@+id/tx_order_id"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="订单编号："
                android:textSize="15sp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:id="@+id/tx_order_state"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="退款成功"
                android:textSize="15sp"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>

        <include layout="@layout/common_gap" />

        <so.xiaolu.xiaolu.customwidget.NestedListView
            android:id="@+id/goods_listview"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            />

        <include layout="@layout/common_gap" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_weight="1"
            android:layout_height="32dp"
            android:orientation="horizontal" >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="申请数量："
                android:textSize="15sp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:id="@+id/tx_order_postfee"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="1"
                android:textSize="15sp"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>

        <include layout="@layout/common_gap" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_weight="1"
            android:layout_height="32dp"
            android:orientation="horizontal" >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="可退金额："
                android:textSize="15sp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:id="@+id/tx_order_totalfee"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="￥120"
                android:textSize="15sp"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_weight="1"
            android:layout_height="32dp"
            android:orientation="horizontal" >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="退款原因："
                android:textSize="15sp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:id="@+id/tx_order_discountfee"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="七天无理由退货"
                android:textSize="15sp"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>

        <include layout="@layout/common_gap" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_weight="1"
            android:layout_height="64dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tx_order_crttime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="时间：2016年1月6日 退款成功"
                android:textSize="15sp"
                />

            <TextView
                android:id="@+id/tx_order_crtstate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="时间：2016年1月3日  申请退款"
                android:textSize="15sp"
                />

        </LinearLayout>

    </ScrollView>





</LinearLayout>