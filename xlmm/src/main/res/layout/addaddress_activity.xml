<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.jimei.library.widget.XlmmTitleView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:xlmm_title="新增收货地址" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:layout_marginTop="16dp"
        android:background="@color/greytow" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90px"
        android:layout_gravity="center_vertical"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLength="12"
            android:padding="8dp"
            android:text="收货人"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textCursorDrawable="@drawable/color_cursor"
            android:layout_marginLeft="20dp"
            android:background="@null"
            android:hint="请输入收货人姓名"
            android:maxLength="20"
            android:padding="8dp"
            android:textSize="14sp" />

    </LinearLayout>

    <include layout="@layout/common_gap" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90px"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="手机号"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/mobile"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textCursorDrawable="@drawable/color_cursor"
            android:layout_marginLeft="20dp"
            android:background="@null"
            android:hint="请输入收货人手机号"
            android:inputType="phone"
            android:maxLength="11"
            android:padding="8dp"
            android:textSize="14sp" />

    </LinearLayout>

    <include layout="@layout/common_gap" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:layout_marginTop="16dp"
        android:background="@color/greytow" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:minHeight="90px"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="所在地区"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:layout_toRightOf="@id/tv_1"
            android:hint="请选择收货人地址"
            android:padding="8dp"
            android:textSize="14sp" />

    </LinearLayout>

    <include layout="@layout/common_gap" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:minHeight="90px"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="详细地址"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/clear_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textCursorDrawable="@drawable/color_cursor"
            android:layout_marginLeft="13dp"
            android:background="@null"
            android:hint="请输入详细地址"
            android:maxLength="40"
            android:padding="8dp"
            android:textSize="14sp" />

    </LinearLayout>

    <include layout="@layout/common_gap" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="90px"
        android:layout_marginTop="16dp"
        android:gravity="center_vertical"
        android:minHeight="90px">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="是否设为常用地址"
            android:textSize="14sp" />

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/switch_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:buttonTint="@color/colorAccent"
            android:padding="8dp"
            android:shadowColor="@color/colorAccent" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/save"
            android:layout_width="660px"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:background="@drawable/btn_common_default"
            android:text="保存"
            android:textColor="@color/white" />

    </RelativeLayout>


</LinearLayout>